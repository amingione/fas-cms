{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "types": ["astro/client", "vite/client", "node"],
    "module": "es2020",
    "target": "es2015",
    "outDir": "dist", // Direct compiled output to a separate directory
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],
      "@lib/*": ["src/lib/*"]
    },
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "checkJs": false, // Disable type-checking for .js files to avoid processing LegacySanityQuery.js
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "*.astro",
    "**/*.ts",
    "**/*.tsx",
    "netlify/functions/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/dev/LegacySanityQuery.js",
    "stackbit.config.ts"
  ] // Exclude sample/react tsparticles component to avoid missing peer deps
}
