{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "types": ["@clerk/astro"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"]
    }
  },
  "include": [
    "src",
    ".astro/types.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.astro"
  ]
}