---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
    <section>
        <div class="flex flex-col items-center justify-center min-h-screen bg-black text-white">
            <h1 class="text-4xl font-cyber text-accent mb-4">Contact Us</h1>
            <p class="text-lg font-captain tracking-[1.2px] text-[#1d92ea] mb-12">
                Have questions or need assistance? Reach out to us!
            </p>

            <form action="https://formspree.io/f/xjvjlqzj" method="POST" class="w-full max-w-md">
                <div class="mb-4">
                    <label for="name" class="block text-sm font-captain text-gray-300 mb-2">Name</label>
                    <input type="text" id="name" name="name" required class="w-full px-3 py-2 border border-gray-600 rounded bg-[#1a1a1a] text-white focus:outline-none focus:ring focus:ring-accent" />
                </div>
                <div class="mb-4">
                    <label for="email" class="block text-sm font-captain text-gray-300 mb-2">Email</label>
                    <input type="email" id="email" name="_replyto" required class="w-full px-3 py-2 border border-gray-600 rounded bg-[#1a1a1a] text-white focus:outline-none focus:ring focus:ring-accent" />
                </div>
                <div class="mb-4">
                    <label for="message" class="block text-sm font-captain text-gray-300 mb-2">Message</label>
                    <textarea id="message" name="message" rows="4" required class="w-full px-3 py-2 border border-gray-600 rounded bg-[#1a1a1a] text-white focus:outline-none focus:ring focus:ring-accent"></textarea>
                </div>
                <button type="submit" class="bg-accent hover:bg-secondary text-white font-bold py-2 px-4 rounded transition duration-200">Send Message</button>
            </form>
        </div>
    </section>
</BaseLayout>