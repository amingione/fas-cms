---
import BaseLayout from '@layouts/BaseLayout.astro';
import { getGitPageDoc, sbFieldPath, sbObjectId } from '@lib/stackbit';
const pageDoc: any = await getGitPageDoc('power-packages');
import Button from '@/components/Button.astro';
import PackagesAccordion from '@/components/PackagesAccordion';
---

<BaseLayout>
  <div {...sbObjectId('content/pages/power-packages.json')}>
    <div aria-hidden="true" class="hidden" {...sbFieldPath('title')}>{pageDoc?.title ?? 'Power Packages'}</div>

    <!-- HERO: full-bleed, dark glass, tight under header -->
    <section
      class="relative w-full h-[72vh] md:h-[78vh] overflow-hidden"
      style="--hero:url('/shop')"
      aria-label="Power Packages Hero"
    >
      <img src="/images/backgrounds/bg-path-overlay.webp" alt="" class="absolute inset-0 w-full h-full object-cover object-center pointer-events-none select-none" />
      <div class="absolute inset-0 bg-gradient-to-b from-black/30 via-black/50 to-black/70"></div>

      <div class="relative z-10 h-full flex flex-col items-center justify-center text-center px-0 md:px-6">
        <h1 class="text-5xl md:text-7xl font-ethno tracking-[0.08em] text-white drop-shadow-[0_6px_28px_rgba(0,0,0,0.8)]" {...sbFieldPath('title')}>
          {pageDoc?.title ?? 'POWER PACKAGES'}
        </h1>
        <p class="mt-3 text-base md:text-lg font-mono tracking-[0.12em] text-white/80 max-w-2xl">
          Platform‑tuned upgrade bundles engineered for clean installs, real gains, and factory‑like drivability.
        </p>

        <!-- badges -->
        <div class="mt-6 flex flex-wrap gap-3 justify-center">
          <span class="px-4 py-1.5 rounded-full border border-white/30 bg-black/50 text-white/90 text-xs font-ethno uppercase tracking-[0.18em]">No Tune Required (Base)</span>
          <span class="px-4 py-1.5 rounded-full border border-white/30 bg-black/50 text-white/90 text-xs font-ethno uppercase tracking-[0.18em]">Financing Available</span>
          <span class="px-4 py-1.5 rounded-full border border-white/30 bg-black/50 text-white/90 text-xs font-ethno uppercase tracking-[0.18em]">Bolt‑On Focus</span>
        </div>

        <!-- primary CTAs -->
        <div class="mt-8 flex flex-col sm:flex-row gap-4">
          <Button text="Shop All Packages" variant="multi-swipe-v2" href="/shop?categorySlug=power-packages&category=power-packages" />
          <Button text="Customize Your Build" variant="multi-swipe-v2" href="/customBuild" />
        </div>
      </div>
    </section>

    <!-- HIGHLIGHTS STRIP -->
    <section class="relative justify-center px-5 w-full border-y border-white/20">
      <div class="mx-auto w-full max-w-7xl px-0 md:px-6">
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-0 divide-y divide-white/20 sm:divide-y-0 md:divide-x md:divide-white/20">
          <div class="flex items-center gap-3 py-4 px-4">
            <div class="w-2 h-2 rounded-full bg-accent"></div>
            <div class="text-white text-xs md:text-sm font-mono tracking-[0.14em]">Dyno‑Proven Options</div>
          </div>
          <div class="flex items-center gap-3 py-4 px-4">
            <div class="w-2 h-2 rounded-full bg-accent"></div>
            <div class="text-white/80 text-xs md:text-sm font-mono tracking-[0.14em]">OEM‑Style Fit &amp; Finish</div>
          </div>
          <div class="flex items-center gap-3 py-4 px-4">
            <div class="w-2 h-2 rounded-full bg-accent"></div>
            <div class="text-white/80 text-xs md:text-sm font-mono tracking-[0.14em]">Fast Turnaround</div>
          </div>
          <div class="flex items-center gap-3 py-4 px-4">
            <div class="w-2 h-2 rounded-full bg-accent"></div>
            <div class="text-white/80 text-xs md:text-sm font-mono tracking-[0.14em]">Warranty‑Friendly Base Kits</div>
          </div>
        </div>
      </div>
    </section>

    <!-- PLATFORM GRID -->
    <section class="py-12 md:py-16">
      <div class="mx-auto w-full max-w-7xl px-0 md:px-6">
        <h2 class="text-center text-3xl md:text-4xl font-ethno text-accent mb-8 md:mb-12 tracking-wide">Popular Packages</h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-3 md:gap-6 luxury-platinum-shine">
          <!-- Card template -->
          <a href="/shop/power-packages" class="group relative aspect-[4/3] overflow-hidden rounded-xl border border-white/20 bg-black">
            <img src="/images/packages/challenger FAS.png" alt="Hellcat Packages" class="absolute inset-0 w-full h-full object-cover opacity-80 group-hover:opacity-100 transition" />
            <div class="absolute inset-0 border border-white/40 border-shadow-md"></div>
            <div class="absolute bottom-0 left-0 right-0 p-4">
              <div class="text-primary font-borg text-xl drop-shadow">Factory</div>
              <div class="text-white font-ethno text-3xl leading-none drop-shadow">Freak</div>
              <div class="text-white font-mono text-sm drop-shadow text-right justify-right align-text-top">Challenger/Charger</div>
            </div>
          </a>

          <a href="/shop?platform=trackhawk" class="group relative aspect-[4/3] overflow-hidden rounded-xl border border-white/20 bg-black">
            <img src="/images/packages/FAS-durango.webp" alt="Trackhawk &amp; Durango Packages" class="absolute inset-0 w-full h-full object-contain opacity-80 group-hover:opacity-100 transition" />
            <div class="absolute inset-0 border border-white/40 border-shadow-md"></div>
            <div class="absolute top-0 left-0 right-0 p-4">
              <div class="text-primary font-borg text-xl drop-shadow">Factory</div>
              <div class="text-white font-ethno text-3xl leading-none drop-shadow">Freak</div>
              <div class="text-white font-mono text-sm drop-shadow text-right justify-right align-text-top">Trackhawk/Durango</div>
            </div>
          </a>

          <a href="/shop?platform=lx" class="group relative aspect-[4/3] overflow-hidden rounded-xl border border-white/20 bg-black">
            <img src="/images/packages/FAS-trackhawk-bay.webp" alt="FAS Trackhawk Packages" class="absolute inset-0 w-full h-full object-contain opacity-80 group-hover:opacity-100 transition" />
            <div class="absolute inset-0 border border-white/40 border-shadow-md"></div>
            <div class="absolute bottom-0 left-0 right-0 p-4">
              <div class="text-primary font-borg text-xl drop-shadow">FaS</div>
              <div class="text-white font-ethno text-3xl leading-none drop-shadow">1X</div>
              <div class="text-white font-mono text-sm drop-shadow text-right justify-right align-text-top">Trackhawk</div>
            </div>
          </a>
        </div>

        <!-- F.A.S. Tiers -->
        <div class="hidden grid-cols-1 md:grid-cols-2 gap-3 md:gap-6 mt-6 md:mt-10 racing-stripe">
          <div class="group relative aspect-[4/3] overflow-hidden rounded-xl border border-white/20 bg-[#0b0b0c] ">
            <img src="/images/packages/fas-1x-2.png" alt="F.A.S. 1X" class="absolute inset-0 w-full h-full object-cover opacity-85 group-hover:opacity-100 transition" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent"></div>
            <div class="absolute bottom-0 left-0 right-0 p-5">
              <div class="text-white font-borg text-5xl drop-shadow">F.A.S.</div>
              <div class="text-primary font-ethno text-6xl drop-shadow">1X</div>
            </div>
          </div>
          <div class="group relative aspect-[4/3] overflow-hidden rounded-xl border border-white/20 bg-[#0b0b0c]">
            <img src="/images/packages/fas 2x.png" alt="F.A.S. 2X" class="absolute inset-0 w-full h-full object-cover opacity-85 group-hover:opacity-100 transition" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent"></div>
            <div class="absolute bottom-0 left-0 right-0 p-5">
              <div class="text-white font-borg text-5xl drop-shadow">F.A.S.</div>
              <div class="text-primary font-ethno text-6xl drop-shadow">2X</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CALL TO ACTION -->
    <section class="bg-transparent py-12 md:py-16 text-center">
      <div class="flex flex-col gap-5 items-center">
        <Button text="Book an Install" variant="multi-swipe-v2" href="/schedule"/>
      </div>
    </section>

    <!-- PACKAGES ACCORDION AT BOTTOM -->
    <PackagesAccordion client:load />

  </div>
</BaseLayout>

