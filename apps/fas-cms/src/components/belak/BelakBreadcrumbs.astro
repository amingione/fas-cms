---
interface Props { current: 'overview' | 'series2' | 'series3' | 'skinnies' }
const { current } = Astro.props as Props;
const label =
  current === 'overview' ? 'Wheels'
  : current === 'series2' ? 'Series 2'
  : current === 'series3' ? 'Series 3'
  : 'Skinnies';
---
<nav aria-label="Breadcrumb" class="mb-4">
  <ol class="flex items-center gap-2 text-sm text-white/80">
    <li><a href="/" class="hover:text-accent">Home</a></li>
    <li>/</li>
    <li><a href="/belak/wheels" class="hover:text-accent">Wheels</a></li>
    {current !== 'overview' && (<>
      <li>/</li>
      <li class="text-white">{label}</li>
    </>)}
  </ol>
  <div class="h-px w-full bg-white/10 mt-3"></div>
  </nav>

