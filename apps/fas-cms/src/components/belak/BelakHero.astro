---
interface Props {
  title: string;
  subtitle?: string;
  imageUrl?: string; // optional decorative bg or wheel photo
}
const { title, subtitle, imageUrl } = Astro.props;
---

<section class="relative overflow-hidden bg-neutral-950">
  {imageUrl && (
    <img src={imageUrl} alt="" class="pointer-events-none absolute inset-0 h-full w-full object-cover opacity-20" loading="lazy" />
  )}
  <div class="relative mx-auto max-w-7xl px-6 py-16 sm:py-20">
    <div class="grid items-center gap-10 md:grid-cols-[1fr_420px]">
      <div>
        <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold tracking-tight text-white">{title}</h1>
        {subtitle && <p class="mt-4 max-w-2xl text-neutral-300">{subtitle}</p>}
        <div class="mt-6 h-px w-40 bg-gradient-to-r from-red-500/80 to-transparent"></div>
      </div>
      <div class="rounded-2xl border border-white/10 bg-neutral-900/40 p-6 shadow-lg backdrop-blur">
        <ul class="space-y-2 text-sm text-neutral-300">
          <li>Forged aluminum 3-piece construction (S2/S3)</li>
          <li>Lightweight, ARP hardware, track-use only</li>
          <li>Diameters: 13 / 15 / 17 / 18 • Widths: 4–15 in</li>
          <li>Skinnies: 15×3.5 • 17×4.5</li>
        </ul>
        <a href="#quote" class="mt-4 inline-block rounded-xl bg-black px-4 py-2 text-white border border-black transition-colors hover:bg-transparent hover:text-black">Get a quote</a>
      </div>
    </div>
  </div>
</section>
