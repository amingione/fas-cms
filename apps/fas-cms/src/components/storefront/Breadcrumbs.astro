---
/**
 * Breadcrumbs.astro â€” FAS theme
 *
 * Renders a breadcrumb trail from an array of { href, label } items.
 * The last item is the current page and is not linked.
 *
 * Props:
 *  items: Array<{ href?: string; label: string }>
 */
interface Crumb {
  href?: string;
  label: string;
}
const { items = [] } = Astro.props as { items: Crumb[] };
---
{items.length > 0 && (
  <nav aria-label="Breadcrumb" class="mb-4">
    <ol class="flex flex-wrap items-center gap-2 text-sm text-white/70">
      {items.map((c, idx) => {
        const isLast = idx === items.length - 1;
        return (
          <li class="flex items-center gap-2">
            {c.href && !isLast ? (
              <a href={c.href} class="hover:text-white transition">{c.label}</a>
            ) : (
              <span class="text-white">{c.label}</span>
            )}
            {!isLast && <span class="text-white/90">/</span>}
          </li>
        );
      })}
    </ol>
  </nav>
)}
