---
interface Props { current?: 'overview' | 'arc' }
const { current = 'overview' } = Astro.props as Props;
const label = current === 'arc' ? 'ARC Monoforged' : 'Wheels';
---
<nav aria-label="Breadcrumb" class="mb-4">
  <ol class="flex items-center gap-2 text-sm text-white/80">
    <li><a href="/" class="hover:text-accent">Home</a></li>
    <li>/</li>
    <li><a href="/jtx/wheels" class="hover:text-accent">JTX Forged</a></li>
    {current !== 'overview' && (<><li>/</li><li class="text-white">{label}</li></>)}
  </ol>
  <div class="h-px w-full bg-white/10 mt-3"></div>
</nav>

