---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
  <section class="p-10 space-y-10 bg-transparent text-white max-w-4xl mx-auto">
    <h1 class="text-3xl font-ethno-italic font-bold text-accent">Your Cart</h1>

    <div class="bg-[#333333] rounded-[10px] p-6 shadow-product-inset">
      <p class="text-gray-300 mb-4 font-kwajong">Your cart items will appear here.</p>

      <!-- Placeholder until cart logic is wired up -->
      <ul class="space-y-4">
        <li class="flex justify-between items-center text-sm">
          <span class="text-white font-ethno">Example Product Name</span>
          <span class="text-white font-semibold font-ethno-italic">$999.00</span>
        </li>
        <!-- Add more list items dynamically here -->
      </ul>

      <div class="mt-8 text-right">
        <a href="https://fasmotorsports.com/checkout" class="relative group inline-block px-8 py-3 text-black bg-white border border-white uppercase tracking-wider font-semibold overflow-hidden transition-all duration-300 hover:bg-primary hover:text-white">
          <span class="relative z-10 flex items-center justify-center gap-2 group-hover:text-white">
            Proceed to Checkout
            <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-300 text-current" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
            </svg>
          </span>
          <span class="absolute inset-0 bg-primary transform -translate-x-full group-hover:translate-x-0 transition-transform duration-300 z-0"></span>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
