---
import BaseLayout from '@layouts/BaseLayout.astro';
import { getGitPageDoc, sbFieldPath, sbObjectId } from '@lib/stackbit';
import SectionRenderer from '@/components/SectionRenderer.astro';
import ProductSpecSheet from '@components/specs/ProductSpecSheet.astro';

const pageDoc: any = await getGitPageDoc('BilletSnoutSpecs');
---

<BaseLayout>
  <div {...sbObjectId('content/pages/BilletSnoutSpecs.json')}>
    <div aria-hidden="true" class="hidden" {...sbFieldPath('title')}>
      {pageDoc?.title ?? 'Billet Supercharger Snout — Spec Sheet'}
    </div>

    {Array.isArray(pageDoc?.sections) && pageDoc.sections.length > 0 && (
      <SectionRenderer sections={pageDoc.sections} baseFieldPath="sections" />
    )}
  <section class="mt-5 pt-5">
    <ProductSpecSheet
      title={pageDoc?.title ?? 'Billet Supercharger Snout — Spec Sheet'}
      description="CNC‑machined billet snout designed for flow, strength, and precise alignment under high load."
      imageSrc="/images/snouts/FAS-Billet-Snout.png"
      imageAlt="FAS Motorsports Billet Supercharger Snout"
      specs={[
        { label: 'Material', value: 'Billet aluminum, CNC‑machined' },
        { label: 'Machining', value: 'Multi‑axis CNC; bore and face in a single setup for concentricity' },
        { label: 'Inlet Support', value: 'High‑flow inlet geometry; supports large throttle bodies' },
        { label: 'Runout Targets', value: 'Tight concentricity and face parallelism for tracking stability' },
        { label: 'Finish', value: 'Anodized for durability and corrosion resistance' },
        { label: 'Compatibility', value: 'Built to OE interface specs; verify for your platform prior to order' }
      ]}
      about={[
        'The billet snout resists flex and distortion under belt load at high RPM, helping maintain shaft alignment, belt tracking, and bearing life.',
        'A flow‑optimized inlet with blended transitions reduces turbulence for more repeatable airflow and performance.',
        'Designed to install cleanly with OE hardware and sensors while supporting popular throttle body sizes for street and track builds.'
      ]}
    />
  </div>
  </section>
</BaseLayout>
