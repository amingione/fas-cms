---
import BaseLayout from '@layouts/BaseLayout.astro';
import { loadPageDoc, inlineFieldAttrs, inlineObjectId } from '@lib/content';
import SectionRenderer from '@/components/SectionRenderer.astro';
const pageDoc: any = await loadPageDoc('PredatorPulleySpecsSheet');
import ProductSpecSheet from '@components/specs/ProductSpecSheet.astro';
---

<BaseLayout>
  <div {...inlineObjectId('content/pages/specs/PredatorPulley.json')}>
    <div aria-hidden="true" class="hidden" {...inlineFieldAttrs('title')}>
      {pageDoc?.title ?? 'Predator Pulley — Spec Sheet'}
    </div>
    {Array.isArray(pageDoc?.sections) && pageDoc.sections.length > 0 && (
      <SectionRenderer sections={pageDoc.sections} baseFieldPath="sections" />
    )}
  <section class="mt-5 pt-5"></section>
    <!-- Variant A: Slip-On Lower Pulley (No Tune Required) -->
    <ProductSpecSheet
      title="Predator Slip-On Lower Pulley — No Tune Required"
      description="Slip-on lower pulley designed for quick install and repeatable traction. Delivers additional boost without requiring a calibration change on compatible setups."
      imageSrc="/images/billetParts/fas-pred-pully.png"
      imageAlt="FAS Motorsports Predator Pulley"
      specs={[
        { label: 'Material', value: 'Aluminum billet, heat‑treated' },
        { label: 'Manufacturing', value: 'Multi‑axis CNC for concentricity and finish' },
        { label: 'Finish', value: 'Hard anodized, traction‑tuned belt surface' },
        { label: 'Rib Options', value: '8‑rib and 10‑rib configurations' },
        { label: 'Diameter Options', value: 'Multiple sizes (application‑dependent)' },
        { label: 'Install', value: 'Slip‑on lower; no supercharger removal' }
      ]}
      about={[
        'Purpose‑built for belt traction and longevity. Optimized surface and geometry help retain grip and reduce slip on compatible street setups.',
        'Direct, slip‑on installation avoids disturbing the supercharger assembly, supporting quick upgrades.'
      ]}
      ctaHref="/shop/fas-predator-lower-pulley-no-tune-required-upgrade-trx-pulley-kit-green-belt"
      ctaLabel="View Slip‑On Predator Pulley"
    />

    <!-- Variant B: Predator 15% Slip-On Lower Pulley (Requires Tune) -->
    <ProductSpecSheet
      title="Predator 15% Slip-On Lower Pulley — Requires Tune"
      description="THE ALL NEW PREDATOR 15% SLIP ON LOWER PULLEY For mild or wild applications. Simple install yields ~4–5 psi boost gain."
      imageSrc="/images/billetParts/fas-pred-pully.png"
      imageAlt="FAS Motorsports Predator 15% Pulley"
      specs={[
        { label: 'Boost Gain', value: 'Approx. 4–5 psi (application‑dependent)' },
        { label: 'Kit Contents', value: 'Pulley, crank pin kit, supercharger and accessory belts, new crank bolt, required hardware' },
        { label: 'Install', value: 'Slip‑on lower; belts and hardware included' },
        { label: 'Build Paths', value: 'Supports 800–850 whp 93 octane “mild” builds; enables larger uppers (2.95/2.85) for 1000+ whp E85 “max effort” builds' },
        { label: 'Belt Management', value: 'More wrap and traction; reduces need for oversized auxiliary idlers' }
      ]}
      about={[
        'Mild build: Install the 15% lower kit, belts, injectors, plugs — retain factory clutched upper pulley and target 800–850 whp on 93 octane.',
        'Max effort: Run larger uppers (2.95/2.85) with the 15% lower to reach 1000+ whp on E85 with improved belt wrap and reduced slip.',
        'Kit includes detailed instructions and belt routing diagrams. Proven on customer cars.'
      ]}
      ctaHref="/shop/fas-predator-15-lower-pulley-kit-charger-challenger-pulley-kit"
      ctaLabel="View Predator 15% Lower Pulley"
    />
  </div>
</BaseLayout>
