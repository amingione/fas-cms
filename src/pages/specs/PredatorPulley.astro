---
import BaseLayout from '@layouts/BaseLayout.astro';
import { getGitPageDoc, sbFieldPath, sbObjectId } from '@lib/stackbit';
import SectionRenderer from '@/components/SectionRenderer.astro';
const pageDoc: any = await getGitPageDoc('PredatorPulleySpecsSheet');
import ProductSpecSheet from '@components/specs/ProductSpecSheet.astro';
---

<BaseLayout>
  <div {...sbObjectId('content/pages/specs/PredatorPulley.json')}>
    <div aria-hidden="true" class="hidden" {...sbFieldPath('title')}>
      {pageDoc?.title ?? 'Predator Pulley — Spec Sheet'}
    </div>
    {Array.isArray(pageDoc?.sections) && pageDoc.sections.length > 0 && (
      <SectionRenderer sections={pageDoc.sections} baseFieldPath="sections" />
    )}

    <ProductSpecSheet
      title={pageDoc?.title ?? 'Predator Pulley — Spec Sheet'}
      description="Engineered & manufactured by FAS Motorsports for high‑grip belt traction, precise drive ratios, and stable boost control at extreme RPM."
      imageSrc="/images/billetParts/fas-pred-pully.png"
      imageAlt="FAS Motorsports Predator Pulley"
      specs={[
        { label: 'Material', value: '7075‑T6 aluminum billet, heat‑treated' },
        { label: 'Manufacturing', value: '5‑axis CNC; bore and OD in single setup for concentricity' },
        { label: 'Tolerances', value: 'Runout ≤ 0.0015"; bore tolerance H7; face parallelism ≤ 0.001"' },
        { label: 'Finish', value: 'Type III hard anodize, graphite‑black; Ra 0.8–1.2 µm belt surface' },
        { label: 'Rib Options', value: '8‑rib (K) and 10‑rib (J/K hybrid); SAE J1459 groove geometry' },
        { label: 'Diameters', value: '2.65", 2.85", 3.00", 3.25", 3.50" (others by request)' },
        { label: 'Hub/Bore', value: 'Interference‑fit hub with keyed or hex‑hub options; bore concentric to OD within 0.0008"' },
        { label: 'Balancing', value: 'ISO 21940‑11 G2.5 equivalent at 20,000 rpm' },
        { label: 'Compatibility', value: 'Gen III HEMI supercharged platforms (TRX, Trackhawk, Redeye, Demon, Durango SRT); contact us for other fitments' },
        { label: 'Operating Temp', value: '−40°F to 300°F ambient; no measurable distortion at 300°F soak' }
      ]}
      about={[
        'Predator is purpose‑built for traction and longevity. 7075‑T6 billet resists flex under belt load to maintain concentricity and stable tracking at elevated shaft speeds.',
        'A grip‑optimized crown and tuned surface finish increase wrap friction while limiting localized heat. Each pulley is hard anodized to control wear and galvanic corrosion in harsh engine bays.',
        'Every unit is precision balanced and verified for tight runout to reduce belt flutter and bearing load at 20k+ rpm. Multiple rib counts and diameters let you tailor boost and drivability for your setup.'
      ]}
    />
  </div>
</BaseLayout>
