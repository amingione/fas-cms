---
import BaseLayout from "@/layouts/BaseLayout.astro";
import BelakHero from "@/components/belak/BelakHero.astro";
import BelakBreadcrumbs from "@/components/belak/BelakBreadcrumbs.astro";
import BelakSidebar from "@/components/belak/BelakSidebar.astro";
import WheelSpecForm from "@/components/belak/WheelSpecForm";
---
<BaseLayout>
  <BelakHero
    title="Belak Series 3 — Quote Your Set"
    subtitle="3-piece forged construction. Broad size matrix incl. 15×3.5 & 17×4.5 skinnies; multiple bolt patterns."
  />

  <div class="mx-auto max-w-7xl px-6 py-6">
    <BelakBreadcrumbs current="series3" />
    <div class="grid md:grid-cols-[260px_1fr] gap-8">
      <BelakSidebar current="series3" />
      <main class="space-y-12">
        <section class="prose prose-invert max-w-none">
          <h2>Series 3 Overview</h2>
          <p>Ultra-light 3-piece racing wheels with ARP hardware, wide size/fitment coverage. Track-use only.</p>
        </section>

        <WheelSpecForm client:only="react" defaultSeries="Series 3" pageContext="series3" />
      </main>
    </div>
  </div>
</BaseLayout>
