---
import BaseLayout from "@/layouts/BaseLayout.astro";
import BelakHero from "@/components/belak/BelakHero.astro";
import BelakBreadcrumbs from "@/components/belak/BelakBreadcrumbs.astro";
import BelakSidebar from "@/components/belak/BelakSidebar.astro";
import WheelSpecForm from "@/components/belak/WheelSpecForm";
import WheelsHero from '@/components/WheelsHero';

const requestUrl = new URL(Astro.request.url);
requestUrl.search = '';
requestUrl.hash = '';
const canonical = requestUrl.toString();

const pageTitle = 'Belak Wheels Quote';
const pageDescription = 'Request custom Belak Series 2 and Series 3 forged racing wheel specs through F.A.S. Motorsports with tailored fitment and hardware guidance.';

const breadcrumbStructuredData = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: 'Home',
      item: `${requestUrl.origin}/`
    },
    {
      '@type': 'ListItem',
      position: 2,
      name: 'Belak Wheels',
      item: canonical
    }
  ]
};
---

<BaseLayout title={pageTitle} description={pageDescription} canonical={canonical}>
  <Fragment slot="head">
    <script type="application/ld+json">
      {JSON.stringify(breadcrumbStructuredData)}
    </script>
  </Fragment>

 <BelakHero
  title="Belak Wheels — Custom Spec Quote"
  subtitle="Series 2 & Series 3 forged 3-piece racing wheels. No prices shown — request a tailored quote."
/>

<div class="mx-auto max-w-7xl px-6 py-6">
  <BelakBreadcrumbs current="overview" />
  <div class="grid md:grid-cols-[260px_1fr] gap-8">
    <BelakSidebar current="overview" />
    <main class="space-y-12">
      <section class="prose prose-invert max-w-none">
        <h2>Why Belak at FAS</h2>
        <p>Ultra-light 3-piece forged construction with ARP hardware. Built for serious drag applications. We’ll help you nail backspacing, brake clearance, and tire pairing.</p>
      </section>

      <WheelSpecForm client:only="react" pageContext="wheels" />
    </main>
  </div>
</div>
 
<section class="mb-5">
  <WheelsHero client:load />
</section>
</BaseLayout>
