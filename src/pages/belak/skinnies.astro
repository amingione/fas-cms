---
import BaseLayout from "@/layouts/BaseLayout.astro";
import BelakHero from "@/components/belak/BelakHero.astro";
import BelakSidebar from "@/components/belak/BelakSidebar.astro";
import WheelSpecForm from "@/components/belak/WheelSpecForm";
---
<BaseLayout>
  <BelakHero
    title="Belak Skinnies — 15×3.5 & 17×4.5"
    subtitle="Front runners with common 2.25″ backspacing option and metal valve stems. Track use only."
  />

  <div class="mx-auto max-w-7xl px-6 py-6">
    <div class="grid md:grid-cols-[260px_1fr] gap-8">
      <BelakSidebar current="skinnies" />
      <main class="space-y-12">
        <section class="prose prose-invert max-w-none">
          <h2>Skinny Fronts</h2>
          <p>Spec your skinnies with the correct bolt pattern, backspacing, and finish. We’ll confirm BBK clearance before quote.</p>
        </section>

        <WheelSpecForm client:only="react" constrainToSkinnies={true} defaultSeries="Series 3" pageContext="skinnies" />
      </main>
    </div>
  </div>
</BaseLayout>
