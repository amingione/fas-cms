---
import BaseLayout from '@/layouts/BaseLayout.astro';

const pageTitle = 'Order Confirmation | FAS Motorsports';
const pageDescription = 'Your order has been received';
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <main class="return-page">
    <div class="container mx-auto px-4 py-8 max-w-2xl">
      <!-- TODO: Replace with the new checkout return handler. -->
      <div class="rounded-lg border border-gray-200 bg-white p-6 shadow-sm">
        <h1 class="text-2xl font-semibold text-gray-900">Order processing</h1>
        <p class="mt-3 text-gray-600">
          We are updating the checkout flow. If you completed a purchase, please contact support to
          confirm your order.
        </p>
        <a href="/contact" class="mt-6 inline-block text-primary underline">
          Contact support
        </a>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  .return-page {
    min-height: calc(100vh - 200px);
    background: linear-gradient(to bottom, #f8f9fa 0%, #ffffff 100%);
  }
</style>
