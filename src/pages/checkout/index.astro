---
import BaseLayout from '@/layouts/BaseLayout.astro';
import MedusaShippingOptions from '@/components/checkout/MedusaShippingOptions';
const pageTitle = 'Checkout | FAS Motorsports';
const pageDescription = 'Complete your purchase';
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <main class="checkout-page">
    <div class="container mx-auto px-4 py-8 max-w-4xl">
      <h1 class="text-3xl font-bold mb-6">Checkout</h1>

      <div id="checkout-container" class="bg-base rounded-lg shadow-lg p-6">
        <MedusaShippingOptions client:load />
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  .checkout-page {
    min-height: calc(100vh - 200px);
    background: linear-gradient(to bottom, #0b0b0c 0%, #151515 100%);
  }

  #checkout-container {
    min-height: 240px;
  }
</style>
