import BaseLayout from '../../layouts/BaseLayout.astro';
import Button from '@/components/Button.astro';
import TrustStrip from '@/components/TrustStrip.astro';
---

<BaseLayout>
  <section class="min-h-screen flex flex-col items-center justify-center text-center text-white px-4">
    <h1 class="text-4xl font-ethno mb-4 text-primary">Checkout Cancelled</h1>
    <p class="mb-6 font-captain rem-1.5 text-lg">Your payment was not completed.</p>
    <Button text="Return Home" variant="multi-swipe-v2" href="/" />
    <div class="w-full mt-10 max-w-4xl">
      <TrustStrip />
    </div>
  </section>
</BaseLayout>
