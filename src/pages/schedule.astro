---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
  <section class="px-6 py-24 max-w-6xl mx-auto text-center">
    <h1 class="text-4xl font-cyber text-accent mb-4">Schedule Your Install</h1>
    <p class="text-lg font-captain tracking-[1.2px] text-[#1d92ea] mb-12">
      Select a time that works for you — we’ll handle the rest. This is the first step toward securing your build.
    </p>

    <div class="w-full h-[800px]">
        <iframe 
        src="https://calendly.com/fasmotorsports-support" 
        width="100%" 
        height="800" 
        frameborder="0" 
        class="rounded-md shadow-lg"
        title="Schedule with FAS Motorsports"
      ></iframe>
    </div>
  </section>
</BaseLayout>