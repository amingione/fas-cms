---
import BaseLayout from '@layouts/BaseLayout.astro';
import FAQ2 from '@/components/faq2.tsx';
import { loadPageDoc, inlineFieldAttrs, inlineObjectId } from '@lib/content';
import SectionRenderer from '@/components/SectionRenderer.astro';

const pageDoc: any = await loadPageDoc('faq');
---

<BaseLayout>
      <div {...inlineObjectId('content/pages/faq.json')}>
    <div aria-hidden="true" class="hidden" {...inlineFieldAttrs('title')}>{pageDoc?.title ?? 'Frequently Asked Questions'}</div>
    {Array.isArray(pageDoc?.sections) && pageDoc.sections.length > 0 && (
      <SectionRenderer sections={pageDoc.sections} baseFieldPath="sections" />
    )}
  </div>
  <section class="text-white text-center pt-5 mt-5 px-6 border-b border-white/20 shadow-lg luxury-glow">
    <FAQ2 client:load />
  </section>
</BaseLayout>
