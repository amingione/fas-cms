---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { sanityClient, urlFor } from '@/lib/sanity';
import { vendorBySlugQuery } from '@/lib/queries';
import { ExternalLink, Globe, Package } from 'lucide-react';

export const prerender = false;

const currency = new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' });
const { slug } = Astro.params;

const resolveSlug = (value: any): string => {
  if (!value) return '';
  if (typeof value === 'string') return value;
  if (typeof value === 'object' && typeof value.current === 'string') return value.current;
  return '';
};

let vendor: any = null;

try {
  vendor = await sanityClient.fetch(vendorBySlugQuery, { slug });
} catch (error) {
  console.error('Error fetching vendor:', error);
}

if (!vendor) {
  return new Response(null, { status: 404 });
}

const vendorName = vendor?.displayName || vendor?.companyName || 'Vendor';
const logoUrl = vendor?.logo ? urlFor(vendor.logo).width(320).height(320).url() : '';
const tags: string[] = Array.isArray(vendor?.tags) ? vendor.tags : [];
const products: any[] = Array.isArray(vendor?.products) ? vendor.products : [];
const productCount = products.length || vendor?.productCount || 0;
---

<BaseLayout title={`${vendorName} | Vendor`} description={vendor?.description || ''}>
  <div class="mx-auto max-w-6xl px-4 py-16 space-y-12">
    <section class="flex flex-col gap-8 rounded-2xl border border-white/10 bg-white/5 p-8 shadow-card md:flex-row md:items-start">
      {logoUrl && (
        <div class="flex h-32 w-32 items-center justify-center rounded-xl bg-white/5 p-4">
          <img
            src={logoUrl}
            alt={vendorName}
            class="h-full w-auto max-w-full object-contain"
            loading="lazy"
            width="320"
            height="320"
          />
        </div>
      )}

      <div class="flex-1 space-y-4">
        <div class="space-y-2">
          <p class="text-sm uppercase tracking-[0.2em] text-primary">Vendor</p>
          <h1 class="text-4xl font-bold text-white">{vendorName}</h1>
          <p class="text-neutral-300 capitalize">{vendor?.businessType || 'Partner'}</p>
        </div>

        <div class="flex flex-wrap items-center gap-4 text-sm">
          {vendor?.website && (
            <a
              href={vendor.website}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 rounded-full border border-white/15 px-4 py-2 text-white transition hover:border-primary hover:text-primary"
            >
              <Globe className="h-4 w-4" />
              Visit Website
              <ExternalLink className="h-3 w-3" />
            </a>
          )}

          {productCount > 0 && (
            <span class="inline-flex items-center gap-2 rounded-full bg-white/5 px-4 py-2 text-sm text-white">
              <Package className="h-4 w-4 text-primary" />
              {productCount} product{productCount === 1 ? '' : 's'}
            </span>
          )}
        </div>

        {tags.length > 0 && (
          <div class="flex flex-wrap gap-2">
            {tags.map((tag) => (
              <span class="rounded-full bg-white/10 px-3 py-1 text-xs text-neutral-200">{tag}</span>
            ))}
          </div>
        )}
      </div>
    </section>

    {vendor?.description && (
      <section class="space-y-3 rounded-2xl border border-white/10 bg-black/40 p-8">
        <h2 class="text-2xl font-semibold text-white">About {vendorName}</h2>
        <p class="text-lg leading-relaxed text-neutral-200 whitespace-pre-line">{vendor.description}</p>
      </section>
    )}

    {products.length > 0 && (
      <section class="space-y-6">
        <div class="flex items-center justify-between gap-4">
          <h2 class="text-2xl font-semibold text-white">Products from {vendorName}</h2>
          <span class="text-sm text-neutral-400">{productCount} listing{productCount === 1 ? '' : 's'}</span>
        </div>

        <div class="grid grid-cols-1 gap-6 md:grid-cols-2 xl:grid-cols-3">
          {products.map((product) => {
            const productSlug = resolveSlug(product?.slug);
            const productHref = productSlug ? `/shop/${productSlug}` : '#';
            return (
              <a
                href={productHref}
                class="block rounded-2xl border border-white/10 bg-white/5 p-5 transition hover:border-primary hover:-translate-y-1"
              >
                <h3 class="text-lg font-semibold text-white">{product?.title ?? 'Product'}</h3>
                {product?.sku && (
                  <p class="mt-1 text-sm text-neutral-400">
                    SKU: <span class="text-neutral-200">{product.sku}</span>
                  </p>
                )}
                {typeof product?.price === 'number' && (
                  <p class="mt-3 text-xl font-bold text-primary">
                    {currency.format(product.price)}
                  </p>
                )}
              </a>
            );
          })}
        </div>
      </section>
    )}

    {vendor?.socialMedia && (
      <section class="rounded-2xl border border-white/10 bg-white/5 p-8">
        <h3 class="text-lg font-semibold text-white">Follow {vendorName}</h3>
        <div class="mt-4 flex flex-wrap gap-3">
          {vendor.socialMedia.facebook && (
            <a
              href={vendor.socialMedia.facebook}
              target="_blank"
              rel="noopener noreferrer"
              class="rounded-full border border-white/15 px-4 py-2 text-sm text-white transition hover:border-primary hover:text-primary"
            >
              Facebook
            </a>
          )}
          {vendor.socialMedia.instagram && (
            <a
              href={vendor.socialMedia.instagram}
              target="_blank"
              rel="noopener noreferrer"
              class="rounded-full border border-white/15 px-4 py-2 text-sm text-white transition hover:border-primary hover:text-primary"
            >
              Instagram
            </a>
          )}
          {vendor.socialMedia.twitter && (
            <a
              href={vendor.socialMedia.twitter}
              target="_blank"
              rel="noopener noreferrer"
              class="rounded-full border border-white/15 px-4 py-2 text-sm text-white transition hover:border-primary hover:text-primary"
            >
              Twitter
            </a>
          )}
          {vendor.socialMedia.linkedin && (
            <a
              href={vendor.socialMedia.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="rounded-full border border-white/15 px-4 py-2 text-sm text-white transition hover:border-primary hover:text-primary"
            >
              LinkedIn
            </a>
          )}
        </div>
      </section>
    )}
  </div>
</BaseLayout>
