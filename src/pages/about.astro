---
import BaseLayout from '@/layouts/BaseLayout.astro';

import AboutSection from '@/components/About';
import AboutHero from '@/components/hero/AboutHero.astro';
import { getGitPageDoc, sbFieldPath, sbObjectId } from '@lib/stackbit';



const pageDoc: any = await getGitPageDoc('about');
---

<BaseLayout>
  <div {...sbObjectId('content/pages/about.json')}>
    <!-- Inline-editable Page Title (mapped to content/pages/about.json:title) -->
    <div class="sr-only" {...sbFieldPath('title')}>
      {pageDoc?.title ?? 'About FAS'}
    </div>


    <!-- About Section -->
    <section id="about" class="bg-black/90 border-y border-white/10">
      <AboutSection client:only="react" />
    </section>
    
    <!-- Professional Hero Banner -->
    <AboutHero
      titleTop="Since 2002"
      description="We are a full production machine and performance shop that specializes in Hellcats, LS, and LT4 based cars."
      ctaText="Read More"
      ctaHref="#about"
      imageSrc="/images/FAS-Team-Testing-Day.png"
      backgroundTextureSrc="/images/backgrounds/bg-spiral-overlay.png"
    />


    </section>
    <!-- Performance Block -->
    <section class="text-white py-16 lg:py-20 px-6 lg:px-10 bg-gradient-to-b from-black/90 to-black/60">
      <div class="max-w-6xl mx-auto text-center lg:text-left">
        <h2 class="text-3xl lg:text-4xl font-cyber text-primary mb-6">Built by Racers. Tuned for Victory.</h2>
        <p class="text-white/80 text-lg lg:text-xl font-mono leading-relaxed max-w-4xl">
          Born from a deep rooted love for high-performance street and track builds, <span class="font-borg text-primary">F.a.S. </span><span class="font-ethno text-lg">Motorsports</span> specializes in Dodge, Jeep, and Ram platforms. From IGLA anti-theft installs to custom-tuned power packages — our work speaks for itself.
        </p>
      </div>
    </section>

    <!-- Core Values -->
    <section class="max-w-6xl mx-auto py-16 lg:py-20 px-6 space-y-12 text-white bg-black/40">
      <div class="text-center lg:text-left space-y-6">
        <h2 class="text-3xl lg:text-4xl font-bold font-cyber text-primary">Performance | Precision | Power</h2>
        <p class="font-mono text-lg lg:text-xl text-white/80 leading-relaxed max-w-4xl mx-auto lg:mx-0">
          F.A.S. Motorsports was born from a passion for building some of the fastest cars in the nation. We specialize in high-performance Dodge, Jeep, and Ram platforms, offering tuning, IGLA anti-theft solutions, porting, custom power packages, and more.
        </p>
      </div>
    </section>

    <!-- Legacy Section -->
    <section class="w-full px-6 py-16 lg:py-20 text-white bg-gradient-to-b from-black/60 to-black/90">
      <div class="max-w-7xl mx-auto space-y-16 lg:space-y-20">
        
        <!-- Frank Mingione II Block -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center">
          <div class="space-y-6 text-center lg:text-left order-2 lg:order-1">
            <h2 class="text-3xl lg:text-4xl font-ethno text-accent mb-4">Our Legacy Begins</h2>
            <p class="text-lg lg:text-xl font-mono leading-relaxed text-white/90">
              FAS Motorsports' passion for high-performance vehicles began with <strong class="text-primary">Frank Mingione II</strong>, a professional racer whose relentless pursuit of precision and innovation ignited a generational love for cars. 
              Frank's influence shaped an entire family culture built around craftsmanship, speed, and performance. 
              Though he passed on <strong class="text-accent">December 12, 2011</strong>, his spirit continues to drive every horsepower milestone we achieve today.
            </p>
          </div>
          <div class="order-1 lg:order-2 flex justify-center">
            <img
              src="/images/Frank-Mingione-I.png"
              alt="Frank Mingione I"
              class="rounded-xl shadow-2xl max-w-sm w-full border border-white/10"
            />
          </div>
        </div>
    
        <!-- Frank Mingione III Block -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center">
          <div class="flex justify-center">
            <img
              src="/images/Frank-Mingione-II.png"
              alt="Frank Mingione II"
              class="rounded-xl shadow-2xl max-w-sm w-full border border-white/10"
            />
          </div>
          <div class="space-y-6 text-center lg:text-left">
            <h2 class="text-3xl lg:text-4xl font-ethno text-accent mb-4">Carrying the Torch</h2>
            <p class="text-lg lg:text-xl font-mono leading-relaxed text-white/90">
              <strong class="text-primary">Frank Mingione III</strong> carried forward the spirit passed down from his father, <strong class="text-primary">Frank Mingione II</strong>. 
              His dedication to mastering the art of racing, modification, and automotive performance built the foundation that FAS Motorsports stands on today.
              Teaching everything he learned to his own children, Frank III ensured that the love for building, innovating, and pushing performance limits would continue for generations to come.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Team Section -->
    <section class="w-full px-6 py-16 lg:py-20 bg-black/80 text-white border-y border-white/10">
      <div class="max-w-7xl mx-auto flex flex-col items-center text-center space-y-8 lg:space-y-12">
        <div class="space-y-6 max-w-4xl">
          <h2 class="text-3xl lg:text-4xl font-borg text-primary">
            F.a.S. <span class="font-ethno text-white">Motorsports</span>
          </h2>
          <h3 class="text-2xl lg:text-3xl text-primary font-cyber">
            Where Passion Meets Performance
          </h3>
          <p class="text-base lg:text-lg font-mono leading-relaxed text-white/90">
            At FAS Motorsports, we believe racing isn't just about horsepower — it's about heart, discipline, and the relentless pursuit of perfection.<br /><br />
            Captured here at our local track in Bradenton, Florida, this moment reflects the bond between <strong class="text-primary">Frank Mingione IV</strong>, the owner of FAS Motorsports, his father <strong class="text-primary">Frank Mingione III</strong>, and the team who continues to chase excellence at every event.<br /><br />
            Together, we embody the spirit of family, legacy, and high-performance innovation — both on and off the track.
          </p>
        </div>
    
        <div class="w-full">
          <img 
            src="/images/FAS-Team-Testing-Day.png" 
            alt="FAS Motorsports Team Testing Day" 
            class="w-full max-w-6xl mx-auto rounded-xl lg:rounded-2xl shadow-2xl h-auto border border-white/10"
          />
        </div>
      </div>
    </section>

  
        
      
          
          
        </div>

       
      </div>
    </section>



    
    </section>
  </div>
</BaseLayout>
