import VendorPortalLayout from '@/layouts/VendorPortalLayout.astro';
import HelpCenter from '@/components/vendor-portal/HelpCenter';
const title = 'Vendor Portal - Help Center';
const faqs = [
  { question: 'How do I place a wholesale order?', answer: 'Browse the Wholesale Catalog, add items to your cart, and submit from the Cart page.' },
  { question: 'Where do I see my wholesale pricing?', answer: 'Wholesale prices show in the catalog and cart based on your vendor tier.' },
  { question: 'How do I view past orders?', answer: 'Go to Orders to view history and open order details.' }
];
---

<VendorPortalLayout title={title} noindex>
  <div class="text-white">
    <HelpCenter faqs={faqs} client:load />
  </div>
</VendorPortalLayout>
