---
import BaseLayout from '@/layouts/BaseLayout.astro';
const title = 'Vendor Portal - Releases';
---

<BaseLayout title={title} noindex>
  <main class="min-h-screen bg-black text-white px-6 py-10">
    <div class="max-w-5xl mx-auto space-y-4">
      <h1 class="text-3xl font-bold">Vendor Releases & Updates</h1>
      <p class="text-white/70">
        New features, fixes, and improvements for wholesale vendors.
      </p>
      <div class="rounded-xl border border-white/10 bg-white/5 p-4 space-y-3">
        <p class="text-sm text-white/80">No updates published yet. Check back soon.</p>
      </div>
    </div>
  </main>
</BaseLayout>
