---
import BaseLayout from '@/layouts/BaseLayout.astro';
import JtxHero from '@/components/jtx/JtxHero.astro';
import JtxSidebar from '@/components/jtx/JtxSidebar.astro';
import JtxWheelSpecForm from '@/components/jtx/JtxWheelSpecForm';
---
<BaseLayout>
  <JtxHero title="ARC Monoforged — Quote Your Set" subtitle="Lightweight monoblock construction with popular sizes and offsets." />
  <div class="mx-auto max-w-7xl px-6 py-6">
    <div class="grid md:grid-cols-[260px_1fr] gap-8">
      <JtxSidebar current="arc" />
      <main class="space-y-8">
        <section class="prose prose-invert max-w-none">
          <h2>ARC Monoforged Overview</h2>
          <p>Choose your diameter, width, bolt pattern, and offset. We’ll confirm brake and hub fitment during quoting.</p>
        </section>
        <JtxWheelSpecForm client:only="react" defaultSeries="Monoforged Series" pageContext="jtx-arc" />
      </main>
    </div>
  </div>
</BaseLayout>
