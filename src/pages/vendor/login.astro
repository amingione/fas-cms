---
import BaseLayout from '../../layouts/BaseLayout.astro';
const title = 'Vendor Login';
---

<BaseLayout title={title}>
  <div
    class="min-h-screen flex items-center justify-center"
    style="background-image: url('/images/pages BR.png')"
  >
    <div class="bg-black p-6 rounded-lg shadow-lg border border-white max-w-md w-full text-center">
      <div class="mb-6">
        <img
          src="/images/RedFASChromeLogo.png"
          alt="FAS Motorsports Logo"
          width="100"
          height="100"
          class="mx-auto"
        />
      </div>
      <h1 class="text-4xl font-bold font-orbitron text-red-600 mb-6 uppercase">
        Vendor Login
      </h1>
      <form id="vendorLoginForm" class="space-y-4">
        <div>
          <label class="block text-white font-bold mb-2" for="vendorEmail">
            Email
          </label>
          <input
            id="vendorEmail"
            name="email"
            type="email"
            placeholder="Email"
            class="w-full p-2 bg-gray-800 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-red-600"
            required
          />
        </div>
        <div>
          <label class="block text-white font-bold mb-2" for="vendorPassword">
            Password
          </label>
          <input
            id="vendorPassword"
            name="password"
            type="password"
            placeholder="Password"
            class="w-full p-2 bg-gray-800 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-red-600"
            required
          />
        </div>
        <button
          type="submit"
          class="w-full bg-red-600 text-white p-2 rounded-lg hover:bg-red-700 transition duration-200 font-bold uppercase tracking-wide"
        >
          Login
        </button>
        <p id="vendorLoginError" class="text-red-500 text-center mt-4 hidden"></p>
      </form>
      <div class="text-center mt-6 text-white text-sm">
        <p>
          Not a vendor?{' '}
          <a href="/vendor/apply" class="text-yellow-300 hover:underline">
            Apply here.
          </a>
        </p>
      </div>
    </div>
  </div>

  <script>
    /** @type {HTMLFormElement | null} */
    const loginForm = document.querySelector('#vendorLoginForm');

    loginForm?.addEventListener('submit', async (event) => {
      event.preventDefault();

      /** @type {HTMLInputElement | null} */
      const emailInput = document.querySelector('#vendorEmail');
      /** @type {HTMLInputElement | null} */
      const passwordInput = document.querySelector('#vendorPassword');
      /** @type {HTMLParagraphElement | null} */
      const errorEl = document.querySelector('#vendorLoginError');

      if (!emailInput || !passwordInput || !errorEl) {
        console.error('Required login form elements missing');
        return;
      }

      const email = (emailInput as HTMLInputElement).value;
      const password = (passwordInput as HTMLInputElement).value;
      errorEl.classList.add('hidden');

      try {
        const res = await fetch('/api/vendor/login', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email, password }),
          credentials: 'include'
        });
        const data = await res.json();
        if (res.ok) {
          // Store the vendor token for subsequent requests
          if (data.token) {
            localStorage.setItem('vendorToken', data.token);
          }
          const params = new URLSearchParams(window.location.search);
          const returnTo = params.get('returnTo') || '/vendor/dashboard';
          window.location.href = returnTo;
        } else {
          errorEl.textContent = data.message || 'Login failed';
          errorEl.classList.remove('hidden');
        }
      } catch (err) {
        errorEl.textContent = 'Failed to connect to server';
        errorEl.classList.remove('hidden');
      }
    });
  </script>
</BaseLayout>
