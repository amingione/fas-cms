---
import BaseLayout from '../../layouts/BaseLayout.astro';
const title = 'Vendor Application';
const vendorApplyScript = new URL('../../scripts/vendor-apply.ts', import.meta.url);
---

<BaseLayout title={title}>
  <div
    class="relative min-h-screen flex items-center justify-center bg-cover text-white px-4"
    style="background-image: url('/images/backgrounds/bg-asphalt-overlay.webp')"
  >
    <div id="applicationContainer" class="w-full"></div>
  </div>

  <script type="module" src={vendorApplyScript.href}></script>
</BaseLayout>
