---
import '@/components/framer/styles.css';

import BaseLayout from '@layouts/BaseLayout.astro';

import HeadingBadge from '@components/framer/heading-badge.jsx';
import Comment from '@components/framer/comment.jsx';
import ProcessCard from '@components/framer/process-card.jsx';
import ServiceCard from '@components/framer/service-card.jsx';
import Availability from '@components/framer/availability.jsx';
import MainButton from '@components/framer/main-button.jsx';
import MainButton2 from '@components/framer/main-button-2.jsx';
---

<BaseLayout>
  <fragment slot="head">
    <link rel="stylesheet" href="https://unpkg.com/unframer@3.2.1/styles/reset.css" />
    <link rel="stylesheet" href="https://unpkg.com/unframer@3.2.1/styles/framer.css" />
    <link rel="stylesheet" href="/src/components/framer/styles.css" />
  </fragment>

  <section class="min-h-screen w-full bg-black text-white">
    <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8 space-y-8">
      <HeadingBadge.Responsive client:load text="F.A.S." title="Framer Components Showcase" />
      <Comment.Responsive client:load author="" comment="Reusable, editable UI blocks imported from your Framer model." />

      <div class="grid grid-cols-1 md:grid-cols-4 gap-4 md:gap-6">
        <ProcessCard.Responsive client:load step="Step 1" badgeText="1" title="Consult" description="Define goals and scope." />
        <ProcessCard.Responsive client:load step="Step 2" badgeText="2" title="Design" description="Measurements & CAD planning." />
        <ProcessCard.Responsive client:load step="Step 3" badgeText="3" title="Fabricate" description="Precision TIG welds & fixtures." />
        <ProcessCard.Responsive client:load step="Step 4" badgeText="4" title="Validate" description="Fitment & leak testing." />
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-6">
        <ServiceCard.Responsive client:load title="TIG & MIG" description="Stainless thin‑wall TIG; structural MIG." imageBannerVisible={false} tickerVisible={false} />
        <ServiceCard.Responsive client:load title="Materials" description="304/316L stainless, aluminized steel." imageBannerVisible={false} tickerVisible={false} />
        <ServiceCard.Responsive client:load title="Finishes" description="Brushed, satin, ceramic‑coat options." imageBannerVisible={false} tickerVisible={false} />
      </div>

      <div class="flex items-center justify-between flex-wrap gap-4">
        <Availability.Responsive client:load redText="lead times vary" greenText="custom components available" />
        <div class="flex gap-3">
          <MainButton.Responsive client:load title="Request a Quote" newTab={false} />
          <MainButton2.Responsive client:load title="Book Consultation" newTab={false} />
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
