

---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BookingConfirm from '../../components/BookingConfirm.jsx';
---

<BaseLayout>
  <section class="px-6 md:px-12 py-16 bg-black text-white font-cyber">
    <div class="max-w-3xl mx-auto text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Appointment Confirmed</h1>
      <p class="text-lg text-white/70 mb-6">
        Thank you for booking with FAS Motorsports. Your appointment has been successfully scheduled.
      </p>

      <BookingConfirm client:only="react" />

      <div class="mt-8">
        <a href="/" class="inline-block px-6 py-3 bg-white text-accent font-semibold rounded hover:bg-gray-300 transition">
          Return to Home
        </a>
      </div>
    </div>
  </section>
</BaseLayout>