

---
import BaseLayout from '../../layouts/BaseLayout.astro';

const urlParams = new URLSearchParams(Astro.url.search);
const bookingId = urlParams.get('bookingId');
---

<BaseLayout>
  <section class="px-6 md:px-12 py-16 bg-black text-white font-cyber">
    <div class="max-w-3xl mx-auto text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Appointment Confirmed</h1>
      <p class="text-lg text-gray-300 mb-6">
        Thank you for booking with FAS Motorsports. Your appointment has been successfully scheduled.
      </p>

      {bookingId ? (
        <div class="bg-zinc-800 border border-white rounded-lg p-6 shadow-md">
          <p class="mb-2 text-sm text-gray-400">Your Booking ID:</p>
          <p class="text-xl font-semibold">{bookingId}</p>
        </div>
      ) : (
        <p class="text-red-500 font-semibold">We couldn't find a booking ID. Please check your confirmation email.</p>
      )}

      <div class="mt-8">
        <a href="/" class="inline-block px-6 py-3 bg-white text-black font-semibold rounded hover:bg-gray-300 transition">
          Return to Home
        </a>
      </div>
    </div>
  </section>
</BaseLayout>