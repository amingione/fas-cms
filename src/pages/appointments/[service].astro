---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { AuthProvider } from '../../components/AuthProvider.jsx';
import RequireLogin from '../../components/RequireLogin.jsx';
import BookingIframe from '../../components/BookingIframe.jsx';

const service = Astro.params.service ?? '';
const title = service.replace(/-/g, ' ').replace(/\b\w/g, (c) => c.toUpperCase());
const iframeUrl = `https://cal.com/fasmotorsports/${service}`;
---

<AuthProvider>
  <RequireLogin>
    <BaseLayout>
      <section class="px-6 md:px-12 py-16 bg-black text-white font-cyber">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl font-bold mb-4">{title}</h1>
          <p class="text-lg text-gray-300 mb-8">
            Book your {title} appointment with FAS Motorsports. Our team will confirm details after submission.
          </p>
          <BookingIframe client:load service={service} />
        </div>
      </section>
    </BaseLayout>
  </RequireLogin>
</AuthProvider>
