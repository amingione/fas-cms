---
import BaseLayout from '@layouts/BaseLayout.astro';

import '@components/framer/styles.css';

import HeadingBadge from '@components/framer/heading-badge.jsx';
import Comment from '@components/framer/comment.jsx';
import ProcessCard from '@components/framer/process-card.jsx';
import ServiceCard from '@components/framer/service-card.jsx';
import Availability from '@components/framer/availability.jsx';
import MainButton from '@components/framer/main-button.jsx';
import MainButton2 from '@components/framer/main-button-2.jsx';
import FinalCTA from '@components/framer/final-cta-section.jsx';
---

<BaseLayout>
  <fragment slot="head">
    <link rel="stylesheet" href="https://unpkg.com/unframer@3.2.1/styles/reset.css" />
    <link rel="stylesheet" href="https://unpkg.com/unframer@3.2.1/styles/framer.css" />
  </fragment>
  <section class="bg-[rgb(0,0,0)] text-white">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-12 space-y-8">
      <div class="space-y-4">
        <HeadingBadge.Responsive client:load text="WELDING" title="Custom Welding & Fabrication" />
        <Comment.Responsive client:load author="" comment="Precision TIG & MIG welding for stainless, aluminized steel, and more — from one‑off prototypes to production runs." />
      </div>

      <div class="grid grid-cols-1 md:grid-cols-4 gap-4 md:gap-6">
        <ProcessCard.Responsive client:load step="Step 1" badgeText="1" title="Consult" description="Define goals, constraints, budget, and intended use (street, track, work duty)." />
        <ProcessCard.Responsive client:load step="Step 2" badgeText="2" title="Design" description="On‑car measurement/CAD; choose materials, bends, joint types, and finish." />
        <ProcessCard.Responsive client:load step="Step 3" badgeText="3" title="Fabricate" description="Mandrel bends and back‑purged TIG for repeatable, strong, clean welds." />
        <ProcessCard.Responsive client:load step="Step 4" badgeText="4" title="Validate" description="Fitment check, leak‑test, and final finish. Install with documented torque." />
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-6">
        <ServiceCard.Responsive client:load title="TIG & MIG" description="Primary TIG for stainless and thin‑wall sections; MIG for structural assemblies." imageBannerVisible={false} tickerVisible={false} />
        <ServiceCard.Responsive client:load title="Materials" description="304/316L stainless, aluminized steel; titanium by request. V‑band, slip‑fit, OEM‑style." imageBannerVisible={false} tickerVisible={false} />
        <ServiceCard.Responsive client:load title="Finishes" description="Brushed, satin, or ceramic‑coat finishes with heat‑management options." imageBannerVisible={false} tickerVisible={false} />
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 items-center gap-6">
        <Availability.Responsive client:load redText="Lead time varies" greenText="Custom welded components available" />
        <div class="flex flex-wrap gap-3">
          <MainButton.Responsive client:load title="Request a Quote" newTab={false} />
          <MainButton2.Responsive client:load title="Book Consultation" newTab={false} />
        </div>
      </div>
    </div>
  </section>

  <section class="bg-[rgb(0,0,0)] text-white border-t border-white/10">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-12">
      <FinalCTA.Responsive client:load />
    </div>
  </section>
</BaseLayout>
