---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { getGitPageDoc, sbFieldPath, sbObjectId } from '@lib/stackbit';
import SectionRenderer from '@/components/SectionRenderer.astro';
const pageDoc: any = await getGitPageDoc('coreExchange');
import Button from "@/components/Button.astro";
---

<BaseLayout title="Core Exchange Program">
  <div {...sbObjectId('content/pages/coreExchange.json')}>
  <div aria-hidden="true" class="hidden" {...sbFieldPath('title')}>{pageDoc?.title ?? 'Core Exchange'}</div>
  {Array.isArray(pageDoc?.sections) && pageDoc.sections.length > 0 && (
    <SectionRenderer sections={pageDoc.sections} baseFieldPath="sections" />
  )}
  <section class="text-white text-center pt-32 pb-20 px-6 sm:px-8">
    <h1 class="font-borg text-5xl mb-6 text-accent" {...sbFieldPath('title')}>
      {pageDoc?.title ?? 'CORE Exchange Program'}
    </h1>
    <p class="font-cyber-italic text-gray-300 text-lg max-w-2xl mx-auto mb-10">
      Don't want to wait for your snout to be ported? Our CORE Exchange Program lets you skip the downtime — receive a ready-to-install ported snout at your doorstep!
    </p>

    <Button href="/shop/2-4l-2-7l-hellcat-snout-porting-service" text="Get Started" variant="multi-swipe-v2" />
  </section>

  <section class="max-w-5xl mx-auto px-6 sm:px-8 py-20 text-white">
    <h2 class="font-borg text-4xl text-accent mb-6">How It Works</h2>
    <ul class="list-disc list-inside text-gray-300 font-captain rem-1.5 text-xl space-y-4">
      <li>We ship you a fully ported 108mm Hellcat or Demon snout, ready to install.</li>
      <li>You swap the sensors from your stock snout onto the ported unit.</li>
      <li>You ship your stock snout back to us within 14 days.</li>
      <li>Once received, your core fee refund will be processed.</li>
    </ul>

    <div class="border-t border-gray-700 my-10"></div>

    <div class="bg-black rounded-lg shadow-lg p-8">
      <h2 class="font-borg text-4xl text-accent mb-6">Refund Details</h2>
      <p class="text-gray-300 font-cyber-italic mb-4">
        Refunds are based on the supercharger snout you return:
      </p>
      <ul class="list-disc list-inside text-gray-300 font-cyber-italic space-y-2 mb-10">
        <li><strong>$450 refund</strong> — for a stock 2.4L Hellcat snout</li>
        <li><strong>$550 refund</strong> — for a stock 2.7L Demon snout</li>
      </ul>

      <p class="text-red-600 font-cyber-italic mb-4">
        Important: Your stock snout must be received within 14 days to be eligible for a refund. No communication or tracking within 14 days = No refund.
      </p>
    </div>

    <div class="border-t border-gray-700 my-10"></div>

    <h2 class="font-borg text-4xl text-accent mb-6">Performance Gains</h2>
    <p class="text-gray-300 font-cyber-italic mb-8">
      Customers have reported:
      <ul class="list-disc list-inside text-gray-300 font-cyber-italic space-y-2 mt-2">
        <li>+40–60 rwhp gains on 2.4L Hellcat/Trackhawk/Durango Hellcat/TRX superchargers</li>
        <li>+80–125 rwhp gains on 2.7L Demon/Redeye superchargers — paired with a 108mm throttle body</li>
      </ul>
    </p>

    <div class="border-t border-gray-700 my-10"></div>

    <h2 class="font-borg text-4xl text-primary mb-6">Shipping Information</h2>
    <p class="text-gray-300 font-cyber-italic mb-6">
      Please ship your stock supercharger snout (labeled CORE Exchange Program) to:
    </p>

    <p class="font-captain rem-1.5 text-lg mb-10">
      FAS Motorsports<br />
      6161 Riverside Dr<br />
      Punta Gorda, FL 33982<br />
    </p>

    <Button href="/contact" text="Contact Us for More Details" variant="default" />
  </section>
  </div>
</BaseLayout>
