---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { loadPageDoc, inlineFieldAttrs, inlineObjectId } from '@lib/content';
import SectionRenderer from '@/components/SectionRenderer.astro';
const pageDoc: any = await loadPageDoc('coreExchange');
import Button from "@/components/Button.astro";
import BrandDivider from '@/components/divider/brandDivider';
import SocialMedia from '@/components/divider/socialMedia';
import { CheckCircleIcon, InformationCircleIcon } from '@heroicons/react/20/solid';
const requestUrl = new URL(Astro.request.url);
requestUrl.search = '';
requestUrl.hash = '';
const canonical = requestUrl.toString();

const pageTitle = 'Core Exchange Program';
const pageDescription = 'Get pre-ported snouts, coated lids, and complete supercharger assemblies without downtime through the F.A.S. Motorsports core exchange program.';
---

<BaseLayout title={pageTitle} description={pageDescription} canonical={canonical}>
  <div {...inlineObjectId('content/pages/coreExchange.json')}>
  <div aria-hidden="true" class="hidden" {...inlineFieldAttrs('title')}>{pageDoc?.title ?? 'Core Exchange'}</div>
  {Array.isArray(pageDoc?.sections) && pageDoc.sections.length > 0 && (
    <SectionRenderer sections={pageDoc.sections} baseFieldPath="sections" />
  )}
    <!-- HERO -->
  <section
      class="relative flex items-center justify-center pt-10 mb-12 lg:mb-[-8px]"
    >
      <div class="relative w-full overflow-hidden rounded-none min-h-[420px] sm:min-h-[520px] lg:min-h-[620px]">
        {/* Video Background */}
        <video
          class="absolute inset-0 h-full w-full object-cover"
          aria-hidden="true"
          src="/images/fabrication/coreExchangebanner.mp4"
          loop
          preload="auto"
          muted
          playsinline
          autoplay
          style={{
            cursor: 'auto',
            backgroundColor: 'rgba(204, 8, 8, 0)',
            objectPosition: '50% 50%',
            filter: 'brightness(0.6) contrast(1.2) saturate(1.2) grayscale(100%)',
            opacity: 1
          }}
        />
        <div
          aria-hidden="true"
          class="absolute inset-0 bg-black/55 backdrop-blur-[1px] pointer-events-none"
        />
        <div class="luxury-particles relative z-10 flex h-full flex-col items-center justify-center text-center px-4 pt-16 sm:px-6 sm:pt-20 pointer-events-none">
          {/* Content */}
          <BrandDivider client:load className="justify-center" />
          <div class="max-w-3xl px-6 text-center flex flex-col items-center"></div>

          <p class="text-2xl text-gradient text-primary platinum mt-10 font-borg text-glow pb-2 sm:text-3xl">
            Ready to Install
          </p>
          <h2 class="text-4xl font-bold font-ethno italic sm:text-6xl">
            Core <span class="text-gray-400">Exchange</span>
          </h2>
          <p class="mt-2 text-base font-medium font-ethno italic text-white/70 sm:text-xl/8">
            skip the downtime with our core exchange program.
          </p>
          <SocialMedia client:load className="relative pointer-events-auto mt-6 sm:mt-8 py-4 pb-6 sm:pb-10" />
        </div>
      </div>
    </section>

    <!-- MAIN CONTENT -->
    <section>
    <div class="px-2 pb-10 lg:px-2">
      <div class="mx-auto max-w-3xl text-base/7 text-gray-300">
        <p class="text-base/7 font-semibold text-primaryB">Products in our Program</p>
        <h2 class="font-ethno text-4xl text-white/70 mb-6">What We Offer</h2>
        <p class="mt-6 text-base">
          Our Core Exchange Program is built for customers who want the performance upgrade without the downtime. Whether you're looking to port a snout or get a custom-coated lid, we make it fast, easy, and reliable.
        </p>
        <div class="mt-10 max-w-2xl text-gray-400 text-sm leading-relaxed">
          <p>
            We keep high-demand cores in stock — ported, coated, and ready to ship. Every unit goes through QC inspection and is matched for OEM fitment. Our turnaround process ensures that you get top-tier performance without having to wait weeks on custom work.
          </p>
          <ul role="list" class="mt-8 max-w-xl space-y-8 text-gray-400">
            <li class="flex gap-x-3">
              <CheckCircleIcon aria-hidden="true" className="mt-1 size-5 flex-none text-primary" />
              <span>
                <strong class="font-semibold text-white">Snout Porting – </strong> Choose between 2.4L or 2.7L supercharger snouts. All ported units are cleaned, CNC profiled, and hand-finished for flow.
              </span>
            </li>
            <li class="flex gap-x-3">
              <CheckCircleIcon aria-hidden="true" className="mt-1 size-5 flex-none text-primary" />
              <span>
                <strong class="font-semibold text-white">Custom Coated Cores – </strong> Our ceramic-coated snouts, lids, and full chargers are available in multiple finishes. Non-ported, cosmetic-only.
              </span>
            </li>
            <li class="flex gap-x-3">
              <CheckCircleIcon aria-hidden="true" className="mt-1 size-5 flex-none text-primary" />
              <span>
                <strong class="font-semibold text-white">Full Charger Swaps – </strong> For 2.4L or 2.7L full assemblies. Ideal for customers doing engine builds or shipping complete units.
              </span>
            </li>
          </ul>
          <p class="mt-8">
            All returns must be received within 14 days to be eligible for a refund. We inspect each returned core for damage and rebuildability before issuing the refund.
          </p>
          <p class="mt-6 font-mono text-sm text-white/60">
            Note: Porting performance gains vary by platform and supporting mods. Refund values depend on the returned core’s condition.
          </p>
        </div>
      </div>
    </div>
    </section>

        <!-- Accordion: separate flows for Porting vs. Custom Coating -->
  <section class="text-white text-center mx-2 pt-1 px-2 sm:px-2 border-t rounded-lg border-rounded border-white/10 shadow-inner shadow-white/10">
    <div class="space-y-4">
      <details class="border-b border-white/20 bg-black/40">
        <summary class="px-4 py-3 cursor-pointer select-none font-cyber tracking-widest text-sm flex items-center justify-between">
          <span>Snout Porting Core Exchange</span>
          <span class="text-white/70">▾</span>
        </summary>
        <div class="px-4 pb-5 text-white/80 font-mono text-sm leading-relaxed">
          <ol class="list-decimal list-inside space-y-2 text-left">
            <li>Place your order for a ported 2.4L/2.7L supercharger snout (core exchange).</li>
            <li>We ship you a fully ported snout, ready to install.</li>
            <li>Swap over your sensors/hardware from the stock snout and install the ported unit.</li>
            <li>Ship your stock snout back to us within 14 days using your preferred carrier.</li>
            <li>After inspection, we process your core refund based on the product returned.</li>
          </ol>
          <p class="mt-3 pt-5 text-accent font-serif font-bold text-base">*** Note: Performance gains below apply to porting. See “Pricing & Refunds” for exact core charges and refunds.</p>
        </div>
      </details>
      

      <details class="border-b border-white/20 bg-black/40">
        <summary class="px-4 py-3 cursor-pointer select-none font-cyber tracking-widest text-sm flex items-center justify-between">
          <span>Custom Coating Core Exchange</span>
          <span class="text-white/70">▾</span>
        </summary>
        <div class="px-4 pb-5 text-white/80 font-mono text-base leading-relaxed">
          <ol class="list-decimal list-inside space-y-2 text-left">
            <li>Select a custom coated snout or lid (finish options vary by product).</li>
            <li>We ship you a coated replacement (no porting performed on coated cores unless explicitly stated).</li>
            <li>Install the coated part and return your stock core within 14 days.</li>
            <li>After inspection, we process your core refund according to the coated product’s refund schedule.</li>
          </ol>
          <ul class="list-disc list-inside space-y-1 mt-3 text-accent text-base text-left mx-10 px-10">
            <li>Custom coatings are cosmetic; they do not include internal porting.</li>
            <li>Normal finish variations may occur; allow additional lead time for coating.</li>
            <li>Returned cores must be complete and rebuildable to qualify for a refund.</li>
          </ul>
        </div>
      </details>
    </div>
  </section>

  <section class="px-5 border-t rounded-md border-rounded border-white/10 shadow-inner shadow-white/20 mt-5">
    <div class="bg-black rounded-lg shadow-lg px-2 mx-2 mt-5 lg:mt-20 mb-32">
      <h2 class="font-ethno text-4xl text-black text-glow mb-6">Pricing & Refunds</h2>
      <p class="text-white/70 font-mono font-bold text-sm mb-4 mx-1 px-1">
        Below are the current core exchange fees and corresponding refunds by product. Refunds are issued after we receive and inspect your returned core within 14 days.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
        <div class="rounded-lg border-t drop-shadow shadow-white/10 shadow-md border-white/15 bg-white/5 p-4">
          <h3 class="font-ethno text-base text-white mb-1">2.4L Supercharger Snout – Core Exchange</h3>
          <p class="text-white/80 tracking-tighter text-sm font-mono">Core Charge: <span class="text-primary font-bold">$600</span></p>
          <p class="text-white/80 text-sm tracking-tighter font-mono">Refund on Returned Core: <span class="text-primary font-bold">$350</span></p>
        </div>
        <div class="rounded-lg border-t drop-shadow shadow-white/10 shadow-md border-white/15 bg-white/5 p-4">
          <h3 class="font-ethno text-base text-white mb-1">2.7L Supercharger Snout – Core Exchange</h3>
          <p class="text-white/80 text-sm tracking-tighter font-mono">Core Charge: <span class="text-primary font-bold">$800</span></p>
          <p class="text-white/80 text-sm tracking-tighter font-mono">Refund on Returned Core: <span class="text-primary font-bold">$550</span></p>
        </div>
        <div class="rounded-lg border-t drop-shadow shadow-white/10 shadow-md border-white/15 bg-white/5 p-4">
          <h3 class="font-ethno text-base text-white mb-1">2.4L Supercharger – Full Core</h3>
          <p class="text-white/80 text-sm tracking-tighter font-mono">Core Charge: <span class="text-primary font-bold">$2,500</span></p>
          <p class="text-white/80 text-sm tracking-tighter font-mono">Refund on Returned Core: <span class="text-primary font-bold">$1,600</span></p>
        </div>
        <div class="rounded-lg border-t drop-shadow shadow-white/10 shadow-md border-white/15 bg-white/5 p-4">
          <h3 class="font-ethno text-base text-white mb-1">2.7L Supercharger – Full Core</h3>
          <p class="text-white/80 text-sm tracking-tighter font-mono">Core Charge: <span class="text-primary font-bold">$4,500</span></p>
          <p class="text-white/80 text-sm tracking-tighter font-mono">Refund on Returned Core: <span class="text-primary font-bold">$3,600</span></p>
        </div>
        <div class="rounded-lg border-t drop-shadow shadow-white/10 shadow-md border-white/15 bg-white/5 p-4">
          <h3 class="font-ethno text-base text-white mb-1">2.4L Supercharger Lid – Core Exchange</h3>
          <p class="text-white/80 text-sm tracking-tighter font-mono">Core Charge: <span class="text-primary font-bold">$350</span></p>
          <p class="text-white/80 text-sm tracking-tighter font-mono">Refund on Returned Core: <span class="text-primary font-bold">$250</span></p>
        </div>
      </div>
    </div>
  </section>
</section>

  

<section class="bg-gray-900 text-center">
  <div class="border-t border-white/20 my-10"></div>
    <h2 class="font-ethno text-4xl text-black text-glow mb-6">Shipping Information</h2>
    <p class="text-white/70 font-mono font-extrabold mb-6">
      Please ship your core exchange (labeled CORE Exchange Program) with a copy of your invoice/receipt to:
    </p>

    <p class="font-mono rem-1.5 text-lg mb-10">
      FAS Motorsports<br />
      6161 Riverside Dr<br />
      Punta Gorda, FL 33982<br />
    </p>

    <Button href="/contact" text="Contact Us for More Details" variant="default" />
  </section>
  </div>
</BaseLayout>

