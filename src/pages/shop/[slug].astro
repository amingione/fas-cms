                      if (/youtu\.be/i.test(u.hostname)) {
                        yt = u.pathname.replace(/^\//, '').split('/')[0];
                      } else if (/youtube\.com/i.test(u.hostname)) {
                        if (u.pathname.includes('/embed/')) yt = u.pathname.split('/embed/')[1]?.split(/[?&#]/)[0] || '';
                        else yt = u.searchParams.get('v') || '';
                      }
                    } catch {}
                  }

