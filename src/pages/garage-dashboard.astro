---
import BaseLayout from '../layouts/BaseLayout.astro';
import MyGarageDashboard from '../components/GarageDashboard.jsx';

const savedBuilds = [
  {
    vehicleModel: 'Mustang GT',
    modifications: 'Exhaust, Tune, Intake',
    horsepower: 525,
    price: 6020,
    addOns: 'Carbon Hood, Widebody Kit',
    modList: [
      { name: 'Cold Air Intake', hpGain: 15 },
      { name: 'Cat-back Exhaust', hpGain: 20 },
      { name: 'ECU Tune', hpGain: 30 },
    ],
  },
  {
    vehicleModel: 'Challenger Hellcat',
    modifications: 'Pulley, Tune',
    horsepower: 720,
    price: 8700,
    modList: [
      { name: 'Supercharger Pulley', hpGain: 50 },
      { name: 'E85 Tune', hpGain: 40 },
    ],
  },
];
---

<BaseLayout>
  <div id="garage-dashboard" class="p-6">
    <MyGarageDashboard client:only="react" savedBuilds={savedBuilds} />
  </div>
</BaseLayout>