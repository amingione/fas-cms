---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button.astro';
---

<BaseLayout>

<!-- HERO -->
<section class="relative h-[500px] md:h-[700px] bg-black/20">
  <img src="/images/hp-herofas.png" alt="FAS Hero TRX" class="absolute inset-0 w-full h-full object-cover object-top md:object-center z-0" />
  <div class="absolute inset-0 bg-gradient-to-b from-black/50 to-black/20 z-10"></div>
</div>
<!-- Floating Brand Tag -->
<div class="hidden md:block fixed top-[175px] left-6 z-30 animate-slide-in-left">
  <p class="text-white text-3xl font-borg leading-tight tracking-wide">
    F.a.S.<p class="text-primary font-ethno-italic">MOTORSPORTS</p>
  </p>
</div>
</section>

<!-- NO TUNE PULLEY CTA -->
<section class="bg-black py-20 text-white text-center relative overflow-hidden">
  <div class="w-full max-w-6xl mx-auto px-6">
    <div class="relative w-full overflow-hidden px-6 md:px-12" id="pulley-carousel">
      <div class="flex transition-transform duration-700 ease-in-out" style="transform: translateX(0%)" id="carousel-track">
        <!-- Slide 1 -->
        <div class="w-full flex-shrink-0 flex flex-col-reverse md:flex-row justify-between items-center gap-10 max-w-6xl mx-auto animate-fade-in-up opacity-0 transform translate-y-10">
          <div class="text-center md:text-left w-full">
            <h2 class="font-cyber text-lg tracking-widest text-gray-400">F.A.S. PREDATOR PULLEY</h2>
            <h3 class="text-4xl md:text-5xl text-accent font-borg mt-2 mb-2">NO TUNE REQUIRED.</h3>
            <p class="text-sm px-4 text-gray-400 font-cyber max-w-md">Patent-pending innovation – precision-engineered for flawless performance.</p><br>
            <Button href="/shop" text="Shop Now" variant="multi-swipe-v2" />
          </div>
          <img src="/images/predatoru pulley homepage copy.png" class="max-w-[90%] md:max-w-sm mx-auto" alt="FAS Pulley Stack" />
        </div>

        <!-- Slide 2 -->
        <div class="w-full flex-shrink-0 flex flex-col-reverse md:flex-row justify-between items-center gap-10 max-w-6xl mx-auto animate-fade-in-up opacity-0 transform translate-y-10">
          <div class="text-center md:text-left w-full">
            <h2 class="font-cyber text-lg tracking-widest text-gray-400">HELLCAT SNOUT PORTING</h2>
            <h3 class="text-4xl md:text-5xl text-accent font-borg mt-2 mb-2">PRECISION MATCHED FLOW</h3>
            <p class="text-sm text-gray-400 font-cyber px-4 max-w-md">Increase throttle response and airflow efficiency with CNC porting.</p><br>
            <Button href="/shop" text="Shop Now" variant="multi-swipe-v2" />
          </div>
          <img src="/images/ported-snoutfas.png" class="max-w-[90%] md:max-w-sm mx-auto" alt="FAS Supercharger Package" />
        </div>

        <!-- Slide 3 -->
        <div class="w-full flex-shrink-0 flex flex-col-reverse md:flex-row justify-between items-center gap-10 max-w-6xl mx-auto animate-fade-in-up opacity-0 transform translate-y-10">
          <div class="text-center md:text-left w-full">
            <h2 class="font-cyber text-lg tracking-widest text-gray-400">F.A.S. RACE HUB</h2>
            <h3 class="text-4xl md:text-5xl text-accent font-borg mt-2 mb-2">INTERCOOLED DOMINANCE</h3>
            <p class="text-sm text-gray-400 font-cyber px-4 max-w-md">Custom billet hub with integrated cooling for sustained performance.</p><br>
            <Button href="/shop" text="Shop Now" variant="multi-swipe-v2" />
          </div>
          <img src="/images/painted supercharger whippel pulley copy.png" class="max-w-[90%] md:max-w-sm mx-auto" alt="Race Hub" />
      </div>
    </div>
  </div>
</section>

<script is:inline>
  let index = 0;
  const track = document.getElementById('carousel-track');
  const slides = track.children;
  const total = slides.length;

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        [...slides].forEach(slide => slide.classList.remove('opacity-100', 'translate-y-0'));
        slides[index].classList.add('opacity-100', 'translate-y-0');
      }
    });
  }, { threshold: 0.5 });

  observer.observe(track);

  setInterval(() => {
    index = (index + 1) % total;
    track.style.transform = `translateX(-${index * 100}%)`;
    [...slides].forEach(slide => slide.classList.remove('opacity-100', 'translate-y-0'));
    slides[index].classList.add('opacity-100', 'translate-y-0');
  }, 5000);
</script>

<style>
@keyframes fade-in-up {
  0% {
    opacity: 0;
    transform: translateY(40px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}
.animate-fade-in-up {
  animation: fade-in-up 1s ease-out forwards;
}
</style>

