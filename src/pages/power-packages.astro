---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button.astro';
---

<BaseLayout>
  <!-- Parallax Hero Section -->
  <section 
    class="relative bg-contain bg-center bg-no-repeat bg-fixed h-[80vh] flex items-center justify-center text-center px-4" 
    style="background-image: url('/images/TRX Truck Package FAS copy.png');"
  >
    <div class="max-w-3xl mx-auto">
      <img src="/logo/power packages from FAS.png" alt="F.A.S. Power Packages Animation" class="mx-auto rounded shadow-lg" />
    </div>
  </section>

  <!-- Featured Package -->
  <section class="bg-black/40 py-16 px-6">
    <div class="max-w-5xl mx-auto grid md:grid-cols-2 gap-10 items-center">
      <div>
        <img src="/images/FASpowerpckg.gif" alt="FAS Chrome Logo GIF" class="rounded shadow-lg">
      </div>
      <div>
        <h2 class="text-6xl font-ethno text-white mb-4 drop-shadow-[1px_1px_6px_rgba(0,0,0,0.7)]">Starting From <span class="text-red-500">$1,349.00</span></h2>
        <p class="text-lg font-captain text-gray-300 tracking-[1.2px] mb-4">
            Our entry-level package includes everything you need to elevate your build        </p>
        <p class="text-lg font-ethno text-accent">no tune required</p>
      </div>
    </div>
  </section>

  <!-- Tiered Package Grid -->
  <section class="py-20 px-6 max-w-7xl mx-auto">
    <h2 class="text-4xl font-cyber text-accent mb-12 text-center drop-shadow-[1px_1px_6px_rgba(0,0,0,0.7)]">Platform-Based Packages</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-1">
      <div class="relative bg-transparent rounded shadow-[inset_0_10px_10px_rgba(0,0,0,0.8)] aspect-[4/4] overflow-hidden bg-cover bg-center transition-transform duration-300 ease-in-out hover:scale-[1.03] hover:shadow-2xl" style="background-image: url('/images/RAM PACKAGES copy.png');">
        <div class="absolute top-4 left-4">
          <h3 class="text-2xl font-ethno text-primary mb-2 drop-shadow-[1px_1px_6px_rgba(0,0,0,0.7)]">ram</h3>
          <p class="text-3xl font-borg text-gray-300 drop-shadow-[1px_1px_6px rgba(0,0,0,0.7)]">TRX</p>
        </div>
      </div>
      <div class="relative bg-transparent rounded shadow-[inset_0_10px_10px_rgba(0,0,0,0.8)] aspect-[4/4] overflow-hidden bg-cover bg-center transition-transform duration-300 ease-in-out hover:scale-[1.03] hover:shadow-2xl" style="background-image: url('/images/THpackage.png');">
        <div class="absolute top-4 left-4">
          <h3 class="text-2xl font-ethno text-primary mb-2 drop-shadow-[1px_1px_6px rgba(0,0,0,0.7)]">trackhawk</h3>
          <p class="text-3xl font-borg text-gray-300 drop-shadow-[1px_1px_6px rgba(0,0,0,0.7)]">durango</p>
        </div>
      </div>
      <div class="relative bg-transparent rounded shadow-[inset_0_10px_10px_rgba(0,0,0,0.8)] aspect-[4/4] overflow-hidden bg-cover bg-center transition-transform duration-300 ease-in-out hover:scale-[1.03] hover:shadow-2xl" style="background-image: url('/images/1.png');">
        <div class="absolute top-4 left-4">
          <h3 class="text-2xl font-ethno text-primary mb-2 drop-shadow-[1px_1px_6px rgba(0,0,0,0.7)]">challenger</h3>
          <p class="text-3xl font-borg text-gray-300 drop-shadow-[1px_1px_6px rgba(0,0,0,0.7)]">ChArger</p>
        </div>
      </div>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-2 mt-8">
      <div class="relative bg-transparent rounded shadow-md aspect-[3/3] overflow-hidden bg-cover bg-center scale-90 transition-transform duration-300 ease-in-out hover:scale-[1.03] hover:shadow-2xl" style="background-image: url('/images/fas-1x-2.png');">
        <div class="absolute top-4 left-4">
          <h3 class="text-6xl font-borg text-white mb-2 drop-shadow-[1px_1px_6px rgba(0,0,0,0.7)]">F.a.S.</h3>
          <p class="text-7xl font-ethno text-primary drop-shadow-[1px_1px_6px rgba(0,0,0,0.7)]">1X</p>
        </div>
      </div>
      <div class="relative bg-transparent rounded shadow-md aspect-[3/3] overflow-hidden bg-cover bg-center transition-transform duration-300 ease-in-out hover:scale-[1.03] hover:shadow-2xl" style="background-image: url('/images/fas 2x.png');">
        <div class="absolute top-4 left-4">
          <h3 class="text-6xl font-borg text-white mb-2 drop-shadow-[1px_1px_6px rgba(0,0,0,0.7)]">F.a.S</h3>
          <p class="text-7xl font-ethno text-primary drop-shadow-[1px_1px_6px rgba(0,0,0,0.7)]">2X</p>
        </div>
      </div>
    </div>
  </section>
    <!-- Call to Action -->
    <section class="bg-transparent py-16 px-10 font-ethno text-center">
        <Button text="Shop all Packages" variant="multi-swipe-v2" href="#" rounded={false} />
       <div class="py-4">
        <Button text="Customize Your Build" variant="multi-swipe-v2" href="#" rounded={false} />
    </section>

  
</BaseLayout>