---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AppointmentsList from '../../components/customerdashboard/AppointmentsList';
---

<BaseLayout>
  <section class="text-white p-8 font-mono">
    <h1 class="text-4xl font-cyber mb-6 text-center">My Appointments</h1>

    <div class="max-w-4xl mx-auto">
      <AppointmentsList client:only="react" />
      <noscript>
        <p class="mt-6 text-center text-sm text-white/70">
          Enable JavaScript to load your appointment history.
        </p>
      </noscript>
    </div>
  </section>
</BaseLayout>
