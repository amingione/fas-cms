---
import '../styles/global.css';
import '../styles/fas-theme.css';
import Header from '../components/Header.astro';
import Footer from '../components/footer.astro';
import FloatingLoginGarage from '../components/FloatingLoginGarage.astro';
import FloatingCartWidget from '../components/floatingwidget.jsx';

const { hideBrandTag = false } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="FAS Moto" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="icon" type="image/png" href="/images/faslogochroma.png" />
    

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>F.A.S. Motorsports</title>
  </head>

  <body class="min-h-screen bg-fit bg-center text-white overflow-x-hidden w-screen max-w-[100vw]"
    style="background-image: url('/images/FAS-BG-Texture.png'); background-color: transparent;">
    
    <div class="absolute inset-0 bg-black/10 z-0"></div>

    <!-- Animated Brand Tag -->
    {!hideBrandTag && (
      <div id="brand-tag" class="hidden md:block fixed top-[200px] left-6 z-30 animate-slide-in-left pointer-events-none opacity-80 hover:opacity-100 transition-opacity duration-200">
        <p class="text-white text-3xl font-borg leading-tight tracking-wide">
          F.a.S.<p class="text-primary font-ethno-italic">MOTORSPORTS</p>
        </p>
      </div>
    )}


    <!-- Desktop layout (Astro), hidden on small screens -->
    <div class="relativez-10">
      <Header />
            <main class="fullbleed px-0 w-screen max-w-[100vw] overflow-x-hidden -mt-0">
        <slot />
      </main>
      <div class="m-0 p-0">
        <Footer class="m-0 p-0" />
      </div>
      <FloatingCartWidget client:media="(min-width: 640px)" />
    </div>

    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const elements = document.querySelectorAll('.fade-in-up');
        const observer = new IntersectionObserver(entries => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('opacity-100', 'translate-y-0');
            }
          });
        }, { threshold: 0.15 });

        elements.forEach(el => {
          el.classList.add('opacity-0', 'translate-y-6', 'transition-all', 'duration-700');
          observer.observe(el);
        });

        // Hide the floating F.A.S. badge on pages where it can overlap content
        const brand = document.getElementById('brand-tag');
        const hideOn = [
          /^\/account(\/|$)?/,
          /^\/dashboard(\/|$)?/,
          /^\/customerdashboard(\/|$)?/,
          /^\/checkout(\/|$)?/,
          /^\/cart(\/|$)?/,
        ];
        if (brand && hideOn.some(rx => rx.test(location.pathname))) {
          brand.classList.add('hidden');
        }
      });
    </script>

    <style>
      @keyframes slide-in-left {
        0% {
          opacity: 0;
          transform: translateX(-50px);
        }
        100% {
          opacity: 1;
          transform: translateX(0);
        }
      }
      .animate-slide-in-left {
        animation: slide-in-left 0.8s ease-out forwards;
      }

      /* =========================================================
         Safe zone for interactive controls (carousel arrows etc.)
         Ensures they stay above overlays and wrappers
         ========================================================= */
      #gallery-controls button,
      #gallery #prev,
      #gallery #next {
        position: relative;
        z-index: 9999 !important;
        pointer-events: auto !important;
      }
    </style>

  </body>
</html>