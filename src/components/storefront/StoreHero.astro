---
/**
 * StoreHero.astro â€” FAS theme version
 *
 * A hero/banner for the storefront.
 * - Supports background image (with dark overlay)
 * - Title + subtitle styled in your FAS fonts
 * - Call-to-action buttons
 */
import Button from '../Button.astro';

interface Props {
  title?: string;
  title2?: string;
  title3?: string;
  subtitle?: string;
  ctaPrimaryHref?: string;
  ctaPrimaryLabel?: string;
  imgSrc?: string;
  imgAlt?: string;
  ctaSecondaryHref?: string;
  ctaSecondaryLabel?: string;
  ctaPrimaryVariant?: 'default' | 'secondary' | 'dark' | 'outline' | 'ghost' | 'link';
  ctaSecondaryVariant?: 'default' | 'secondary' | 'dark' | 'outline' | 'ghost' | 'link';
  imgMidgroundSrc?: string;
}
const {
  title = 'FaS',
  title2 = 'Motorsports',
  title3 = '',
  subtitle = '',
  ctaPrimaryHref = '',
  ctaPrimaryLabel = '',
  imgSrc = '',
  imgAlt = '',
  ctaPrimaryVariant = '',
  ctaSecondaryVariant = '',
  imgMidgroundSrc = '',
} = Astro.props as Props;
---
<section class="luxury-particles relative overflow-hidden bg-gradient-to-b from-black to-black/20 text-white">
  {imgSrc ? (
    <img
      src={imgSrc}
      alt={imgAlt || title || 'Store Hero Background'}
      class="luxury-particles absolute inset-0 w-full h-full object-contain object-left justify-left background-layer"
      loading="eager"
      decoding="async"
      fetchpriority="high"
    />
  ) : null}
  <div class="luxury-particles relative z-10 max-w-7xl mx-auto px-4 md:px-6 py-16 text-center foreground-layer">
    <h1 class="font-borg italic text-primaryB text-5xl sm:text-6xl mb-3">{title}<span class="text-white text-5xl sm:text-6xl font-ethno italic"> {title2}</span></h1>
    <h1 class="font-cyber tracking-widest text-2xl text-accent">{title3}</h1>
    <p class="font-base font-ethno italic tracking-widest clamp-2 md:text-lg">{subtitle}</p>
    <div class="relative mt-6 mx-auto flex flex-wrap items-center justify-center gap-3 w-full md:w-auto">
      <Button variant={ctaPrimaryVariant} size="md w-1/2" asChild>
        <a href={ctaPrimaryHref}>{ctaPrimaryLabel}</a>
      </Button>
    </div>
  </div>
</section>
