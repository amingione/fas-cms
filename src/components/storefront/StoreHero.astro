---
/**
 * StoreHero.astro â€” FAS theme version
 *
 * A hero/banner for the storefront.
 * - Supports background image (with dark overlay)
 * - Title + subtitle styled in your FAS fonts
 * - Call-to-action buttons
 */
import { Button } from '@/components/ui/button.tsx';
import Carousel from '@/components/Carousel.astro';

interface Props {
  title?: string;
  subtitle?: string;
  ctaPrimaryHref?: string;
  ctaPrimaryLabel?: string;
  ctaSecondaryHref?: string;
  ctaSecondaryLabel?: string;
}
const {
  title = 'Built for Speed',
  subtitle = 'Premium performance parts & custom builds',
  ctaPrimaryHref = '/packages/power-packages',
  ctaPrimaryLabel = 'Power Packages',
  ctaSecondaryHref = '/BuildConfigurator',
  ctaSecondaryLabel = 'Custom Build'
} = Astro.props as Props;
---
<section class="relative overflow-hidden rounded-2xl border border-white/10 bg-gradient-to-b from-black to-black/90 text-white">
  <div class="relative z-10 max-w-7xl mx-auto px-4 md:px-6 py-16 text-center">
    <h1 class="font-ethno text-3xl md:text-5xl mb-3">{title}</h1>
    <p class="text-white/70 text-base md:text-lg">{subtitle}</p>
    <div class="mt-6 flex items-center justify-center gap-3">
      <Carousel class="relative" />
      <Button asChild variant="default" size="md">
        <a href={ctaPrimaryHref}>{ctaPrimaryLabel}</a>
      </Button>
      <Button asChild variant="secondary" size="md">
        <a href={ctaSecondaryHref}>{ctaSecondaryLabel}</a>
      </Button>
    </div>
  </div>
</section>
