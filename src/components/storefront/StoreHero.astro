---
/**
 * StoreHero.astro â€” FAS theme version
 *
 * A hero/banner for the storefront.
 * - Supports background image (with dark overlay)
 * - Title + subtitle styled in your FAS fonts
 * - Call-to-action buttons
 */
import Button from '../Button.astro';

interface Props {
  title?: string;
  title2?: string;
  title3?: string;
  subtitle?: string;
  ctaPrimaryHref?: string;
  ctaPrimaryLabel?: string;
  imgSrc?: string;
  imgAlt?: string;
  ctaSecondaryHref?: string;
  ctaSecondaryLabel?: string;
  ctaPrimaryVariant?: 'default' | 'secondary' | 'dark' | 'outline' | 'ghost' | 'link';
  ctaSecondaryVariant?: 'default' | 'secondary' | 'dark' | 'outline' | 'ghost' | 'link';
}
const {
  title = 'FaS',
  title2 = 'Motorsports',
  title3 = '',
  subtitle = '',
  ctaPrimaryHref = '',
  ctaPrimaryLabel = '',
  imgSrc = '',
  imgAlt = '',
  ctaSecondaryHref = '',
  ctaSecondaryLabel = '',
  ctaPrimaryVariant = '',
  ctaSecondaryVariant = '',
} = Astro.props as Props;
---
<section class="relative pt-4 mt-4 overflow-hidden bg-gradient-to-b from-black to-black/20 text-white">
  {imgSrc && (
    <img
      src={imgSrc}
      alt={imgAlt || title || 'Store Hero Background'}
      class="absolute inset-0 w-full h-full object-contain object-left justify-left opacity-30"
      loading="lazy"
    />
  )}
  <div class="relative z-10 max-w-7xl mx-auto px-4 md:px-6 py-16 text-center">
    <h1 class="font-borg text-primaryB text-4xl md:text-5xl mb-3">{title}<span class="text-white text-4xl md:text-5xl font-ethno"> {title2}</span></h1>
    <h1 class="font-cyber tracking-widest text-accent">{title3}</h1>
    <p class="font-base font-captain tracking-widest clamp-2 md:text-lg">{subtitle}</p>
    <div class="relative mt-6 mx-auto flex flex-wrap items-center justify-center gap-3 w-full md:w-auto">
      <Button variant={ctaPrimaryVariant} size="md w-1/2" asChild>
        <a href={ctaPrimaryHref}>{ctaPrimaryLabel}</a>
      </Button>
      <Button variant={ctaSecondaryVariant} size="md w-1/2" asChild>
        <a href={ctaSecondaryHref}>{ctaSecondaryLabel}</a>
      </Button>
      </div>
  </div>
</section>
