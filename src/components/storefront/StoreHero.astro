---
/**
 * StoreHero.astro — FAS theme version
 *
 * A hero/banner for the storefront.
 * - Supports background image (with dark overlay)
 * - Title + subtitle styled in your FAS fonts
 * - Call-to-action buttons
 */
import { Button } from '@/components/ui/button';

interface Props {
  title?: string;
  subtitle?: string;
  ctaPrimaryHref?: string;
  ctaPrimaryLabel?: string;
  ctaSecondaryHref?: string;
  ctaSecondaryLabel?: string;
  ctaPrimaryVariant?: 'default' | 'secondary' | 'dark' | 'outline' | 'ghost' | 'link';
  ctaSecondaryVariant?: 'default' | 'secondary' | 'dark' | 'outline' | 'ghost' | 'link';
}
const {
  title = 'Built for Speed',
  subtitle = 'Premium performance parts & custom builds',
  ctaPrimaryHref = '/shop',
  ctaPrimaryLabel = 'Shop All Products ➤',
  ctaSecondaryHref = '/packages/power-packages',
  ctaSecondaryLabel = 'Shop Power Packages ➤',
  ctaPrimaryVariant = 'default',
  ctaSecondaryVariant = 'secondary'
} = Astro.props as Props;
---
<section class="relative overflow-hidden bg-gradient-to-b from-black to-black/20 text-white">
  <div class="relative z-10 max-w-7xl mx-auto px-4 md:px-6 py-16 text-center">
    <h1 class="font-ethno text-primary text-3xl md:text-5xl mb-3">{title}</h1>
    <p class="text-white/70 text-base md:text-lg">{subtitle}</p>
    <div class="relative mt-6 mx-auto flex flex-wrap items-center justify-center gap-3 w-full md:w-auto">
      <Button variant={ctaPrimaryVariant} size="md" asChild>
        <a href={ctaPrimaryHref}>{ctaPrimaryLabel}</a>
      </Button>
      <Button variant={ctaSecondaryVariant} size="md" asChild>
        <a href={ctaSecondaryHref}>{ctaSecondaryLabel}</a>
      </Button>
    </div>
  </div>
</section>
