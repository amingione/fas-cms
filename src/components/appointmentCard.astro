---
const {
  title = 'Service Appointment',
  date,
  status = 'confirmed',
  customer = 'Unknown',
  rescheduleUrl = '',
  cancelUrl = ''
} = Astro.props;
---

<div class="border border-white rounded-lg p-4 shadow-md bg-[#111] text-white font-cyber">
  <div class="flex flex-col md:flex-row justify-between items-start md:items-center">
    <div>
      <h2 class="text-xl font-semibold">{title}</h2>
      <p class="text-sm text-white/70">{date ? new Date(date).toLocaleString() : 'No date provided'}</p>
      <p class="text-sm">Status: <span class="uppercase">{status}</span></p>
    </div>

    <div class="mt-4 md:mt-0 flex flex-col md:items-end items-start gap-2">
      <span class="inline-block px-3 py-1 text-sm border border-white rounded">
        {customer}
      </span>

      {(rescheduleUrl || cancelUrl) && (
        <div class="flex space-x-2">
          {rescheduleUrl && (
            <a href={rescheduleUrl} target="_blank" rel="noopener noreferrer" class="inline-block px-4 py-2 text-sm border border-yellow-400 text-yellow-300 hover:bg-yellow-500 hover:text-gray-900 transition rounded">
              Reschedule
            </a>
          )}
          {cancelUrl && (
            <a href={cancelUrl} target="_blank" rel="noopener noreferrer" class="inline-block px-4 py-2 text-sm border border-red-500 text-red-500 hover:bg-red-500 hover:text-white transition rounded">
              Cancel
            </a>
          )}
        </div>
      )}
    </div>
  </div>
</div>