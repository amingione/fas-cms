---
export interface SpecItem {
  label: string;
  value: string;
}

export interface Props {
  title: string;
  description: string;
  imageSrc: string;
  imageAlt: string;
  specs: SpecItem[];
  about: string[];
}

const { title, description, imageSrc, imageAlt, specs, about } = Astro.props as Props;
---

<!-- Top banner with image/title grid (not a CTA) -->
<section class="w-full bg-gradient-to-b from-black/80 to-black/60 border-b border-white/10">
  <div class="mx-auto w-full max-w-7xl px-4 md:px-6 py-10 md:py-14">
    <div class="grid md:grid-cols-2 gap-8 items-center">
      <div class="order-2 md:order-1">
        <h1 class="text-4xl md:text-5xl font-ethno text-accent mb-4">{title}</h1>
        <p class="text-white/80 font-mono text-base md:text-xl leading-relaxed">{description}</p>
      </div>
      <div class="order-1 md:order-2">
        <div class="aspect-[4/3] md:aspect-[16/10] w-full overflow-hidden rounded-xl border border-white/10 bg-black/40 shadow-2xl">
          <img src={imageSrc} alt={imageAlt} class="h-full w-full object-cover object-center" loading="eager" />
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Content: Specs + About -->
<section class="w-full bg-black/60">
  <div class="mx-auto w-full max-w-7xl px-4 md:px-6 py-10 md:py-14 grid md:grid-cols-2 gap-10">
    <!-- Technical Specifications -->
    <div>
      <h2 class="text-2xl md:text-3xl font-ethno text-accent mb-6">Technical Specifications</h2>
      <dl class="grid grid-cols-1 sm:grid-cols-2 gap-x-6 gap-y-4">
        {specs.map((s) => (
          <div class="rounded-lg border border-white/10 bg-black/50 p-4 shadow">
            <dt class="text-sm font-borg text-white/90 mb-1">{s.label}</dt>
            <dd class="text-white/70 text-sm leading-relaxed">{s.value}</dd>
          </div>
        ))}
      </dl>
    </div>

    <!-- About the Product -->
    <div>
      <h2 class="text-2xl md:text-3xl font-ethno text-accent mb-6">About the Product</h2>
      <div class="space-y-4">
        {about.map((p) => (
          <p class="text-white/80 text-base leading-relaxed font-mono">{p}</p>
        ))}
      </div>
    </div>
  </div>
</section>
