  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const stickyBox = document.querySelector(".my-sticky-header.fixed");
      const threshold = 150;

      if (stickyBox) {
        window.addEventListener("scroll", function () {
          if (window.scrollY > threshold) {
            stickyBox.classList.add("show");
          } else {
            stickyBox.classList.remove("show");
          }
        });
      }
  
      const stickyToggle = document.getElementById("stickyCategoryToggle");
      const stickyDropdown = document.getElementById("stickyCategoryDropdown");
  
      if (stickyToggle && stickyDropdown) {
        stickyToggle.addEventListener("click", () => {
          stickyDropdown.classList.toggle("hidden");
        });
      }
  
      const categoryToggle = document.getElementById("categoryToggle");
      const categoryDropdown = document.getElementById("categoryDropdown");
  
      if (categoryToggle && categoryDropdown) {
        categoryToggle.addEventListener("click", () => {
          categoryDropdown.classList.toggle("hidden");
        });
      }
  
      const categoryClose = document.getElementById("categoryClose");
      if (categoryClose) {
        categoryClose.addEventListener("click", () => {
          if (categoryDropdown) {
            categoryDropdown.classList.add("hidden");
          }
        });
      }
      
      const accountToggle = document.getElementById("accountToggle");
      const accountDashboard = document.getElementById("accountDashboard");
  
      if (accountToggle && accountDashboard) {
        accountToggle.addEventListener("click", () => {
          accountDashboard.classList.toggle("hidden");
        });
      }
      
      const closeAccountDashboard = document.getElementById("closeAccountDashboard");
  
      if (closeAccountDashboard && accountDashboard) {
        closeAccountDashboard.addEventListener("click", () => {
          accountDashboard.classList.add("hidden");
        });
      }

      const mobileMenuToggle = document.getElementById("mobileMenuToggle");
      const mobileMenuDropdown = document.getElementById("mobileMenuDropdown");

      if (mobileMenuToggle && mobileMenuDropdown) {
        mobileMenuToggle.addEventListener("click", () => {
          mobileMenuDropdown.classList.toggle("hidden");
          console.log("Mobile toggle clicked");
        });
      }
    });
  </script>
  
