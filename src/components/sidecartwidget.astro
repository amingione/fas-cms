---
const { isOpen = false } = Astro.props;
---

<div id="side-cart" class={`fixed top-0 right-0 w-80 h-full bg-black text-white shadow-lg transform transition-transform duration-300 z-50 ${isOpen ? 'translate-x-0' : 'translate-x-full'}`}>
  <div class="flex justify-between items-center p-4 border-b border-gray-700">
    <h2 class="text-xl font-ethno-italic font-semibold">Your Cart</h2>
    <button id="closeSideCart" class="text-white hover:text-red-500 text-xl font-bold">&times;</button>
  </div>
  <div class="p-4 space-y-4">
    <p class="text-gray-400 font-kwajong-italic">Your cart items will appear here.</p>
    <!-- Placeholder for future dynamic cart items -->
  </div>
  <div class="p-4 border-t border-gray-700">
    <a href="https://fasmotorsports.com/checkout" class="relative group inline-block w-full px-6 py-3 text-black bg-white border border-transparent uppercase tracking-wider font-semibold overflow-hidden transition-all duration-300 hover:bg-primary hover:text-white hover:shadow-lg hover:shadow-primary/50">
      <span class="relative z-10 flex items-center text-sm justify-center gap-2 group-hover:text-white font-cyber">
        Proceed to Checkout
        <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-300 text-current" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
        </svg>
      </span>
      <span class="absolute inset-0 bg-primary transform -translate-x-full group-hover:translate-x-0 transition-transform duration-300 z-0"></span>
    </a>
  </div>
</div>

<script type="module">
  document.addEventListener('DOMContentLoaded', () => {
    const closeBtn = document.getElementById('closeSideCart');
    const sideCart = document.getElementById('side-cart');

    closeBtn?.addEventListener('click', () => {
      sideCart.classList.add('translate-x-full');
    });
  });
</script>
