---
interface Props { title: string; subtitle?: string; imageUrl?: string }
const { title, subtitle, imageUrl } = Astro.props as Props;
---
<section class="relative overflow-hidden bg-neutral-950">
  {imageUrl && <img src={imageUrl} alt="" class="pointer-events-none absolute inset-0 h-full w-full object-cover opacity-20" loading="lazy" />}
  <div class="relative mx-auto max-w-7xl px-6 py-16 sm:py-20">
    <div class="grid items-center gap-10 md:grid-cols-[1fr_420px]">
      <div>
        <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold tracking-tight text-white">{title}</h1>
        {subtitle && <p class="mt-4 max-w-2xl text-neutral-300">{subtitle}</p>}
        <div class="mt-6 h-px w-40 bg-gradient-to-r from-red-500/80 to-transparent"></div>
      </div>
      <div class="rounded-2xl border border-white/10 bg-neutral-900/40 p-6 shadow-lg backdrop-blur">
        <ul class="space-y-2 text-sm text-neutral-300">
          <li>Forged monoblock construction</li>
          <li>Truck fitments: 5/6/8 lug patterns</li>
          <li>Diameters: 20 / 22 / 24 / 26</li>
        </ul>
        <a
          href="#quote"
          class="mt-4 inline-block rounded-xl bg-black px-4 py-2 text-white border border-black transition-colors hover:bg-primary hover:border-primary hover:text-white"
        >
          Get a quote
        </a>
      </div>
    </div>
  </div>
</section>
