---
const { href = "#", text = "Button", variant = "default", rounded = false } = Astro.props;
---

{variant === "multi-swipe" ? (
  <a href={href} class={`relative group inline-block px-6 py-2 text-white text-base bg-transparent border border-white uppercase tracking-wider font-cyber-italic overflow-hidden transition-all duration-300 shadow-md hover:scale-105 ${rounded ? 'rounded-full' : ''}`}>
    <span class="relative z-10 flex items-center justify-center gap-4 group-hover:text-white transition-colors duration-300">
      {text}
      <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
      </svg>
    </span>
    <span class="absolute inset-0 z-0 bg-primary scale-0 group-hover:scale-150 transition-transform duration-500 ease-out origin-center rounded-full"></span>
  </a>
) : variant === "multi-swipe-v2" ? (
  <a href={href} class={`relative group inline-block px-6 py-2 text-white text-base bg-transparent border border-white uppercase tracking-wider font-ethno overflow-hidden transition-all duration-300 shadow-md hover:scale-105 ${rounded ? 'rounded-full' : ''}`}>
    <span class="relative z-10 flex items-center justify-center gap-4 group-hover:text-white transition-colors duration-300">
      {text}
      <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
      </svg>
    </span>
    <span class="absolute inset-0 z-0 bg-primary scale-0 group-hover:scale-150 transition-transform duration-500 ease-out origin-center ${rounded ? 'rounded-full' : ''}"></span>
  </a>
) : variant === "swipe" ? (
  <a href={href} class={`relative group inline-block w-full sm:w-auto px-4 py-2 text-white text-sm sm:text-base md:text-lg lg:text-xl bg-black border border-white uppercase tracking-wider font-cyber-italic overflow-hidden transition-all duration-300 shadow-md hover:scale-105 ${rounded ? 'rounded-full' : ''}`}>
    <span class="relative z-10 flex items-center justify-center gap-4 group-hover:text-white transition-colors duration-300">
      {text}
      <svg class="w-4 h-4 sm:w-5 sm:h-5 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
      </svg>
    </span>
    <span class="absolute inset-0 bg-primary transform translate-x-full group-hover:translate-x-0 transition-transform duration-300 z-0"></span>
  </a>
) : variant === "swipe-v2" ? (
  <a href={href} class={`relative group inline-block px-4 py-1.5 text-white text-base bg-black border border-white uppercase tracking-wider font-ethno overflow-hidden transition-all duration-300 shadow-md hover:scale-105 ${rounded ? 'rounded-full' : ''} whitespace-nowrap`}>
    <span class="relative z-10 flex items-center justify-center gap-4 group-hover:text-white transition-colors duration-300">
      {text}
      <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
      </svg>
    </span>
    <span class="absolute inset-0 bg-primary transform translate-x-full group-hover:translate-x-0 transition-transform duration-300 z-0"></span>
  </a>
) : variant === "default" ? (
  <a href={href} class={`relative group font-ethno inline-block px-6 py-2 text-white text-base bg-black border border-white uppercase tracking-wider font-semibold overflow-hidden transition-all duration-300 shadow-md hover:scale-105 ${rounded ? 'rounded-full' : ''}`}>
    <span class="relative z-10 flex items-center justify-center gap-4 group-hover:text-white transition-colors duration-300">
      {text}
      <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
      </svg>
    </span>
    <span class="absolute inset-0 bg-primary transform -translate-x-full group-hover:translate-x-0 transition-transform duration-300 z-0"></span>
  </a>
) : variant === "default-v2" ? (
  <a href={href} class={`relative group inline-block px-6 py-2 text-white text-base bg-black border border-white uppercase tracking-wider font-ethno overflow-hidden transition-all duration-300 shadow-md hover:scale-105 ${rounded ? 'rounded-full' : ''}`}>
    <span class="relative z-10 flex items-center justify-center gap-4 group-hover:text-black transition-colors duration-300">
      {text}
      <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
      </svg>
    </span>
    <span class="absolute inset-0 bg-primary transform -translate-x-full group-hover:translate-x-0 transition-transform duration-300 z-0"></span>
  </a>
) : (
  <a href={href} class={`relative group inline-block px-6 py-2 text-white text-base bg-black border border-white uppercase tracking-wider font-ethno overflow-hidden transition-all duration-300 shadow-md hover:scale-105 ${rounded ? 'rounded-full' : ''}`}>
    <span class="relative z-10 flex items-center justify-center gap-4 group-hover:text-black transition-colors duration-300">
      {text}
      <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
      </svg>
    </span>
    <span class="absolute inset-0 bg-primary transform -translate-x-full group-hover:translate-x-0 transition-transform duration-300 z-0"></span>
  </a>
)}
