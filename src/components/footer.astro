---
// No imports needed; icons are lightweight SVGs inline below.
// If you prefer lucide, you can paste their raw SVGs here.
const ROUTE_BASE: Record<string, string> = {
  PRODUCTS: '/shop',      // fixed
  SERVICES: '/services',
  COMPANY: '/company',
  VENDORS: '/vendors'
};

function slugify(label: string) {
  return label
    .toLowerCase()
    .replace(/&/g, 'and')
    .replace(/[^a-z0-9]+/g, '-')
    .replace(/(^-|-$)+/g, '');
}

function routeFor(category: string, label: string) {
  const base = ROUTE_BASE[category] || '/';
  if (category === 'COMPANY') {
    if (/about/i.test(label)) return '/about';
    if (/contact/i.test(label)) return '/contact';
    if (/faq/i.test(label)) return '/faq';
  }
  if (category === 'VENDORS') {
    if (/login/i.test(label)) return 'https://fasmotorsports.io/login';
    if (/dashboard/i.test(label)) return 'https://fasmotorsports.io';
    if (/application/i.test(label)) return 'https://fasmotorsports.io/vendor/apply';
  }
  return `${base}/${slugify(label)}`;
}

const footerGroups: Record<string, { label: string; href: string }[]> = {
  MENU: [
    { label: 'Shop', href: '/shop' },
    { label: 'Power Packages', href: '/power-packages' },
    { label: 'Truck Packages', href: '/truckPackages' },
    { label: 'Core Exchange', href: '/coreExchange' },
    { label: 'IGLA', href: '/igla' },
  ],
  SERVICES: [
    { label: 'Services', href: '/services' },
    { label: 'Porting', href: '/porting' },
    { label: 'Schedule Service', href: '/schedule' },
  ],
  COMPANY: [
    { label: 'About F.A.S.', href: '/about' },
    { label: 'FAQ', href: '/faq' },
    { label: 'Contact', href: '/contact' },
  ],
  VENDORS: [
    { label: 'Login', href: 'https://fasmotorsports.io/vendor/login' },
    { label: 'Dashboard', href: 'https://fasmotorsports.io' },
    { label: 'Application', href: 'https://fasmotorsports.io/vendor/apply' },
  ],
  ACCOUNT: [
    { label: 'My Account', href: '/account' },
    { label: 'Customer Dashboard', href: '/dashboard' },
  ],
};

const socialLinks = [
  { name: 'Instagram', href: 'https://instagram.com/fas_moto', handle: '@fas_moto' },
  { name: 'Facebook', href: 'https://facebook.com/fasmotorsports', handle: 'F.A.S. Motorsports' }
];
