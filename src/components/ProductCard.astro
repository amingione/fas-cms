---
const { product } = Astro.props;
---

<div class="bg-transparent rounded-[10px] shadow-[inset_0_0_10px_rgba(0,0,0,0.5)] hover:shadow-[0_8px_20px_rgba(0,0,0,0.5)] overflow-hidden transform transition-all duration-300 group">
  <div class="p-4 h-64 flex justify-center items-center overflow-hidden">
    <img src={product.images[0]?.src} alt={product.name} class="h-full object-contain transition-transform duration-300 ease-in-out group-hover:scale-110 group-hover:-rotate-2" />
  </div>
  <div class="p-4 space-y-2">
    <h2 class="text-sm font-ethno font-semibold">{product.name}</h2>
    <p class="text-xl font-captain text-primary" set:html={product.price_html}></p>
    <a href={`https://fasmotorsports.com/?add-to-cart=${product.id}`} class="relative group inline-block w-full px-6 py-2 text-white bg-transparent border border-transparent uppercase tracking-wider font-semibold overflow-hidden transition-all duration-300">
        <span class="relative z-10 flex items-center font-cyber justify-center gap-2 group-hover:text-white">
        Add to Cart
        <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
        </svg>
      </span>
      <span class="absolute inset-0 bg-primary transform -translate-x-full group-hover:translate-x-0 text-black transition-transform duration-300 z-0"></span>
    </a>
  </div>
</div>
