# ==============================================================================
# CANONICAL ENVIRONMENT VARIABLES - FAS Motorsports
# ==============================================================================
# Phase 3 Cleanup - 2026-01-31
# This file defines the CANONICAL environment variable names for the system.
# Use these names consistently across all environments and code.
# ==============================================================================

# ------------------------------------------------------------------------------
# SANITY CMS - CANONICAL NAMES ONLY
# ------------------------------------------------------------------------------
# Use these canonical names. Do NOT use VITE_*, NEXT_PUBLIC_*, or SANITY_STUDIO_* prefixed duplicates.

SANITY_PROJECT_ID=r4og35qd
SANITY_DATASET=production
SANITY_API_VERSION=2024-06-07

# API Token - READ access for public content queries
SANITY_API_TOKEN=<your_read_token>

# Public-facing Sanity variables (exposed to browser)
PUBLIC_SANITY_PROJECT_ID=r4og35qd
PUBLIC_SANITY_DATASET=production
PUBLIC_SANITY_API_TOKEN=<your_public_read_token>
PUBLIC_SANITY_STUDIO_URL=<your_studio_url>
PUBLIC_SANITY_FUNCTIONS_BASE_URL=<your_functions_url>

# Caching configuration
PUBLIC_SANITY_ENABLE_CACHE=true
PUBLIC_SANITY_CACHE_TTL_SECONDS=300

# Sanity Studio base URL (for internal links)
SANITY_STUDIO_URL=<your_studio_url>

# Sanity Functions base URL (for serverless functions)
SANITY_FUNCTIONS_BASE_URL=<your_functions_url>

# DEPRECATED - DO NOT USE:
# - VITE_SANITY_* (Vite-specific, use PUBLIC_SANITY_* instead)
# - NEXT_PUBLIC_SANITY_* (Next.js-specific, use PUBLIC_SANITY_* instead)
# - SANITY_STUDIO_PROJECT_ID (redundant with SANITY_PROJECT_ID)
# - SANITY_STUDIO_DATASET (redundant with SANITY_DATASET)
# - SANITY_WRITE_TOKEN (use SANITY_API_TOKEN with appropriate permissions)
# - SANITY_ACCESS_TOKEN (use SANITY_API_TOKEN)
# - SANITY_AUTH_TOKEN (use SANITY_API_TOKEN)
# - SANITY_API_READ_TOKEN (use SANITY_API_TOKEN)
# - PUBLIC_SANITY_API_READ_TOKEN (use PUBLIC_SANITY_API_TOKEN)

# ------------------------------------------------------------------------------
# MEDUSA COMMERCE ENGINE - CANONICAL NAMES
# ------------------------------------------------------------------------------

MEDUSA_BACKEND_URL=<your_medusa_backend_url>
MEDUSA_PUBLISHABLE_KEY=<your_medusa_publishable_key>

# Admin API token for server-side operations
MEDUSA_ADMIN_API_TOKEN=<your_medusa_admin_token>

# Default region for cart creation
MEDUSA_REGION_ID=<your_default_region_id>

# Secret key for Medusa-to-Medusa communication
MEDUSA_SECRET_KEY=<your_medusa_secret_key>

# ------------------------------------------------------------------------------
# STRIPE PAYMENT PROCESSOR - CANONICAL NAMES
# ------------------------------------------------------------------------------

STRIPE_SECRET_KEY=<your_stripe_secret_key>
STRIPE_PUBLISHABLE_KEY=<your_stripe_publishable_key>

# Public-facing Stripe key (exposed to browser)
PUBLIC_STRIPE_PUBLISHABLE_KEY=<your_stripe_publishable_key>

# Webhook secrets (KEEP BOTH - different endpoints)
STRIPE_WEBHOOK_SECRET=<payment_intent_webhook_secret>
STRIPE_SHIPPING_WEBHOOK_SECRET=<shipping_webhook_secret_if_used>

# DEPRECATED - DO NOT USE:
# - STRIPE_API_VERSION (Stripe SDK handles versioning automatically)
# - STRIPE_USE_DYNAMIC_SHIPPING_RATES (shipping handled in Medusa, not Stripe)
# - STRIPE_SHIPPING_ALLOWED_COUNTRIES (shipping handled in Medusa, not Stripe)

# ------------------------------------------------------------------------------
# SHIPPING PROVIDER - SHIPPO (Active)
# ------------------------------------------------------------------------------

SHIPPING_PROVIDER=shippo
SHIPPO_API_KEY=<your_shippo_api_key>
SHIPPO_WEBHOOKS_ENABLED=true

# Warehouse/Ship-from address
WAREHOUSE_ADDRESS_LINE1=6161 Riverside Dr
WAREHOUSE_CITY=Punta Gorda
WAREHOUSE_STATE=FL
WAREHOUSE_ZIP=33982
WAREHOUSE_PHONE=812-200-9012
WAREHOUSE_EMAIL=orders@updates.fasmotorsports.com

# DEPRECATED - DO NOT USE:
# - EASYPOST_* (if SHIPPING_PROVIDER=shippo, remove all EASYPOST variables)
# - SHIP_FROM_* (use WAREHOUSE_* prefix for consistency)
# - SHIPPO_API_BASE (SDK uses default, not needed)

# ------------------------------------------------------------------------------
# EMAIL - RESEND (Transactional Email)
# ------------------------------------------------------------------------------

RESEND_API_KEY=<your_resend_api_key>
RESEND_FROM=<your_from_email>
RESEND_VENDOR_FROM=<your_vendor_from_email>

# Email notification addresses
NOTIFY_EMAIL=<your_notify_email>
NOTIFY_FROM=<your_notify_from_email>
FREIGHT_NOTIFY_TO=<your_freight_notify_email>

# ------------------------------------------------------------------------------
# AUTHENTICATION & SESSION
# ------------------------------------------------------------------------------

# Strong random strings (32+ characters recommended)
JWT_SECRET=<your_jwt_secret>
SESSION_SECRET=<your_session_secret>

# Session configuration
SESSION_COOKIE_NAME=fas_session
SESSION_SAMESITE=lax
SESSION_SECURE=false

# Admin credentials (consider moving to secure secret manager)
ADMIN_EMAIL=<your_admin_email>
ADMIN_PASSWORD=<your_admin_password>

# Customer profile update API token
CUSTOMER_UPDATE_API_TOKEN=<your_customer_update_token>

# ------------------------------------------------------------------------------
# APPLICATION URLS
# ------------------------------------------------------------------------------

# Base application URLs
BASE_URL=<your_base_url>
PUBLIC_BASE_URL=<your_public_base_url>
PUBLIC_SITE_URL=<your_site_url>
SITE_URL=<your_site_url>
SITE_NAME=FAS Motorsports

# API URLs
PUBLIC_API_URL=<your_api_url>

# DEPRECATED - DO NOT USE:
# - NEXT_PUBLIC_API_BASE_URL (use PUBLIC_API_URL)
# - PUBLIC_STUDIO_URL (use PUBLIC_SANITY_STUDIO_URL)

# ------------------------------------------------------------------------------
# GOOGLE MERCHANT CENTER (Product Feed)
# ------------------------------------------------------------------------------

GMC_CONTENT_API_MERCHANT_ID=<your_merchant_id>
GMC_FEED_BASE_URL=https://www.fasmotorsports.com
GMC_FEED_CURRENCY=USD
GMC_FEED_DEFAULT_QUANTITY=5

# SFTP upload configuration (if used)
GMC_SFTP_HOST=partnerupload.google.com
GMC_SFTP_PORT=19321
GMC_SFTP_USERNAME=<your_sftp_username>
GMC_SFTP_PASSWORD=<your_sftp_password>
GMC_SFTP_FEED_FILENAME=fas-products-feed.txt

# ------------------------------------------------------------------------------
# ANALYTICS & TRACKING
# ------------------------------------------------------------------------------

PUBLIC_GA_MEASUREMENT_ID=<your_ga_measurement_id>
PUBLIC_GOOGLE_ADS_ID=<your_google_ads_id>

# ------------------------------------------------------------------------------
# CALENDAR INTEGRATION (Cal.com)
# ------------------------------------------------------------------------------

CALCOM_API_KEY=<your_calcom_api_key>
PUBLIC_CALCOM_API_KEY=<your_public_calcom_api_key>

# ------------------------------------------------------------------------------
# BUILD & DEPLOYMENT (Netlify)
# ------------------------------------------------------------------------------

NETLIFY_AUTH_TOKEN=<your_netlify_auth_token>
NETLIFY_SITE_ID=<your_netlify_site_id>

# Git repository configuration
REPO_URL=<your_repo_url>
REPO_BRANCH=<your_branch>
REPO_PUBLISH_BRANCH=<your_publish_branch>

# Node version
NODE_VERSION=20

# ------------------------------------------------------------------------------
# CORS CONFIGURATION
# ------------------------------------------------------------------------------

CORS_ALLOW=true
CORS_ORIGIN=<your_cors_origin>

# ------------------------------------------------------------------------------
# FEATURE FLAGS
# ------------------------------------------------------------------------------

ENABLE_SANITY=true
NPM_CONFIG_OPTIONAL=false

# Image proxy configuration
PUBLIC_DISABLE_IMAGE_PROXY=false
PUBLIC_ENABLE_IMAGE_PROXY_IN_DEV=false

# ------------------------------------------------------------------------------
# AI INTEGRATION (Optional)
# ------------------------------------------------------------------------------

OPENAI_API_KEY=<your_openai_api_key>
GH_TOKEN=<your_github_token>

# Builder.io (if used)
PUBLIC_BUILDER_KEY=<your_builder_key>

